---
import MainLayout from "../layouts/MainLayout.astro";
import ChatbotToggle from "../components/ChatbotToggle.astro";
import AOSInit from "../components/AOSInit.astro";
---

<MainLayout>
  <fragment slot="title">Contact Us | USRad</fragment>
  <AOSInit />

  <!-- Hero Section - More Dynamic -->
  <section
    class="relative bg-gradient-to-br from-[#003087] via-[#0052cc] to-[#003087] py-20 px-6 text-white overflow-hidden"
  >
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-20 left-20 w-32 h-32 bg-white rounded-full animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-20 right-20 w-24 h-24 bg-white rounded-full animate-pulse delay-1000"
      >
      </div>
      <div
        class="absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full animate-pulse delay-500"
      >
      </div>
    </div>

    <div class="max-w-6xl mx-auto text-center relative z-10" data-aos="fade-up">
      <h1 class="text-6xl md:text-7xl font-bold mb-6 leading-tight">
        We're Here to <span class="text-[#cc9933]">Help</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto opacity-90">
        Expert medical imaging made simple. Get answers in minutes, not days.
      </p>

      <!-- Immediate Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="tel:8005558723"
          class="bg-[#cc9933] hover:bg-[#b8862e] text-[#003087] px-8 py-4 rounded-full font-bold text-lg transition-all transform hover:scale-105 shadow-xl"
        >
          üìû Call Now: (800) USRad-24
        </a>
        <a
          href="#contact-form"
          class="bg-transparent border-2 border-white hover:bg-white hover:text-[#003087] px-8 py-4 rounded-full font-bold text-lg transition-all"
        >
          üí¨ Send Message
        </a>
      </div>
    </div>
  </section>

  <!-- Stats/Trust Section -->
  <section class="bg-white py-16 border-b border-gray-100" data-aos="fade-up">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-[#003087] mb-2">24/7</div>
          <div class="text-gray-600">Support Available</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-[#003087] mb-2">&lt;2hrs</div>
          <div class="text-gray-600">Average Response</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-[#003087] mb-2">50+</div>
          <div class="text-gray-600">Imaging Centers</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-[#003087] mb-2">98%</div>
          <div class="text-gray-600">Customer Satisfaction</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Methods - More Visual -->
  <section class="bg-gray-50 py-20">
    <div class="max-w-6xl mx-auto px-6">
      <h2
        class="text-4xl font-bold text-center text-[#003087] mb-4"
        data-aos="fade-up"
      >
        How Can We Help You Today?
      </h2>
      <p
        class="text-xl text-center text-gray-600 mb-12 max-w-2xl mx-auto"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Choose the option that works best for you
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Phone Card -->
        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div
            class="bg-[#cc9933]/20 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto border-2 border-[#cc9933]"
          >
            <span class="text-2xl">üìû</span>
          </div>
          <h3 class="text-2xl font-bold text-[#003087] mb-4 text-center">
            Call Us Now
          </h3>
          <p class="text-gray-600 mb-6 text-center">
            Speak with our patient care team immediately
          </p>
          <div class="text-center">
            <p class="text-2xl font-bold text-[#003087] mb-4">(800) USRad-24</p>
            <a
              href="tel:8005558723"
              class="bg-[#003087] hover:bg-[#002366] text-white px-6 py-3 rounded-full font-bold transition-all inline-block"
            >
              Call Now
            </a>
          </div>
        </div>

        <!-- Email Card -->
        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div
            class="bg-blue-50 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto border-2 border-[#003087]"
          >
            <span class="text-2xl">‚úâÔ∏è</span>
          </div>
          <h3 class="text-2xl font-bold text-[#003087] mb-4 text-center">
            Email Support
          </h3>
          <p class="text-gray-600 mb-6 text-center">
            Get detailed answers to your questions
          </p>
          <div class="text-center">
            <p class="text-lg font-semibold text-[#003087] mb-4">
              support@usrad.com
            </p>
            <a
              href="mailto:support@usrad.com"
              class="bg-[#cc9933] hover:bg-[#b8862e] text-[#003087] px-6 py-3 rounded-full font-bold transition-all inline-block"
            >
              Send Email
            </a>
          </div>
        </div>

        <!-- Chat Card -->
        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <div
            class="bg-gradient-to-br from-[#003087] to-[#0052cc] w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto"
          >
            <span class="text-2xl text-white">üí¨</span>
          </div>
          <h3 class="text-2xl font-bold text-[#003087] mb-4 text-center">
            Live Chat
          </h3>
          <p class="text-gray-600 mb-6 text-center">
            Quick answers to simple questions
          </p>
          <div class="text-center">
            <p class="text-lg font-semibold text-[#003087] mb-4">
              Available 9AM-6PM
            </p>
            <button
              class="bg-[#cc9933] hover:bg-[#b8862e] text-[#003087] px-6 py-3 rounded-full font-bold transition-all"
            >
              Start Chat
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact-form" class="bg-white py-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-[#003087] mb-4">
          Send Us a Message
        </h2>
        <p class="text-xl text-gray-600">
          We'll get back to you within 2 hours during business hours
        </p>
      </div>

      <div
        class="bg-gray-50 rounded-2xl p-8 md:p-12"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >First Name *</label
              >
              <input
                type="text"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition"
              />
            </div>
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Last Name *</label
              >
              <input
                type="text"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Email *</label
              >
              <input
                type="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition"
              />
            </div>
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Phone</label
              >
              <input
                type="tel"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2"
              >How can we help? *</label
            >
            <select
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition"
            >
              <option value="">Select a topic</option>
              <option value="scheduling">Schedule an Appointment</option>
              <option value="pricing">Questions About Pricing</option>
              <option value="results">Get My Results</option>
              <option value="insurance">Insurance Questions</option>
              <option value="locations">Find a Location</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2"
              >Message *</label
            >
            <textarea
              required
              rows="5"
              placeholder="Tell us more about how we can help you..."
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#003087] focus:border-[#003087] transition resize-none"
            ></textarea>
          </div>

          <div class="text-center pt-4">
            <button
              type="submit"
              class="bg-[#003087] hover:bg-[#002366] text-white px-12 py-4 rounded-full font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
            >
              Send Message ‚Üí
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- FAQ Quick Links -->
  <section class="bg-[#003087] text-white py-16">
    <div class="max-w-6xl mx-auto px-6 text-center" data-aos="fade-up">
      <h2 class="text-3xl font-bold mb-8">Common Questions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a
          href="/faq#pricing"
          class="bg-white/10 hover:bg-white/20 p-6 rounded-xl transition-all"
        >
          <h3 class="font-semibold mb-2">üí∞ How much does it cost?</h3>
          <p class="text-sm opacity-80">See transparent pricing ‚Üí</p>
        </a>
        <a
          href="/faq#insurance"
          class="bg-white/10 hover:bg-white/20 p-6 rounded-xl transition-all"
        >
          <h3 class="font-semibold mb-2">üè• Do you take my insurance?</h3>
          <p class="text-sm opacity-80">Check coverage ‚Üí</p>
        </a>
        <a
          href="/faq#results"
          class="bg-white/10 hover:bg-white/20 p-6 rounded-xl transition-all"
        >
          <h3 class="font-semibold mb-2">üìã When will I get results?</h3>
          <p class="text-sm opacity-80">Learn more ‚Üí</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Provider CTA - Enhanced -->
  <section class="bg-[#cc9933] py-16">
    <div class="max-w-4xl mx-auto px-6 text-center" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-[#003087] mb-4">
        Medical Imaging Provider?
      </h2>
      <p class="text-xl text-[#003087] mb-8 opacity-80">
        Join our network and grow your practice with USRad
      </p>
      <a
        href="/managed-care/"
        class="bg-[#003087] hover:bg-[#002366] text-white px-8 py-4 rounded-full font-bold text-lg transition-all inline-block transform hover:scale-105"
      >
        Join Our Network ‚Üí
      </a>
    </div>
  </section>

  <ChatbotToggle chatbotLabel="üí¨ Let's Talk" />
</MainLayout>
