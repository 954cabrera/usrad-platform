---
// /src/components/ConsultationForm.astro
const { simplified = false } = Astro.props;
---

<div class="consultation-container">
  <div class="form-content">
    <div class="form-header">
      <h2 class="form-title">
        {simplified ? "Request Information" : "Schedule Your Consultation"}
      </h2>
      <p class="form-subtitle">
        {
          simplified
            ? "Get information about our services with no obligation"
            : "We'll connect you with an imaging specialist to discuss your needs"
        }
      </p>
    </div>

    <!-- Form action points to the thank you page -->
    <form class="consultation-form" action="/form-submitted" method="get">
      <!-- Name Field -->
      <div class="form-field">
        <label for="name">Your Name<span class="required">*</span></label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your Full Name"
          required
        />
      </div>

      <!-- Email Field -->
      <div class="form-field">
        <label for="email">Work Email<span class="required">*</span></label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your Work Email"
          required
        />
      </div>

      <!-- Facility Field -->
      <div class="form-field">
        <label for="facility"
          >Facility Name<span class="required">*</span></label
        >
        <input
          type="text"
          id="facility"
          name="facility"
          placeholder="Facility Name"
          required
        />
      </div>

      {
        !simplified && (
          <div class="form-field">
            <label for="locations">
              Number of Locations<span class="required">*</span>
            </label>
            <select id="locations" name="locations" required>
              <option value="" disabled selected>
                Select number of locations
              </option>
              <option value="1">1 Location</option>
              <option value="2-5">2-5 Locations</option>
              <option value="6-10">6-10 Locations</option>
              <option value="11-25">11-25 Locations</option>
              <option value="26+">26+ Locations</option>
            </select>
          </div>
        )
      }

      {
        !simplified && (
          <div class="form-field">
            <label for="message">Additional Information</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              placeholder="Tell us about your imaging center and any specific questions"
            />
          </div>
        )
      }

      <button type="submit" class="submit-button">
        {simplified ? "Request Information" : "Schedule Consultation"}
      </button>

      <p class="disclaimer">
        By submitting, you'll receive information about the USRad partner
        network. No obligation.
      </p>
    </form>
  </div>
</div>

<style>
  /* Importing font */
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap");

  /* Base Styles with larger sizes */
  .consultation-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 0;
    font-family: "Manrope", sans-serif;
  }

  .form-content {
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    padding: 25px;
    border-left: 6px solid #cc9933;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .form-header {
    margin-bottom: 30px;
    text-align: center;
  }

  .form-title {
    font-size: 28px;
    font-weight: 700;
    color: #003087;
    margin: 0 0 10px 0;
  }

  .form-subtitle {
    font-size: 18px;
    color: #555;
    margin: 0;
    line-height: 1.4;
  }

  .consultation-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
  }

  .form-field label {
    font-size: 18px;
    font-weight: 600;
    color: #2c2c2c;
    margin-bottom: 10px;
  }

  .required {
    color: #cc9933;
    margin-left: 4px;
  }

  .form-field input,
  .form-field select,
  .form-field textarea {
    height: auto;
    padding: 16px 20px;
    border: 2px solid #ddd;
    border-radius: 12px;
    font-size: 18px;
    font-family: "Manrope", sans-serif;
    transition: all 0.3s ease;
  }

  .form-field input:focus,
  .form-field select:focus,
  .form-field textarea:focus {
    outline: none;
    border-color: #003087;
    box-shadow: 0 0 0 3px rgba(0, 48, 135, 0.1);
  }

  .form-field textarea {
    min-height: 140px;
    resize: vertical;
  }

  .submit-button {
    margin-top: 10px;
    padding: 18px;
    background-color: #003087;
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 20px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    border-left: 4px solid #cc9933;
  }

  .submit-button:hover,
  .submit-button:focus {
    background-color: #002268;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  }

  .disclaimer {
    margin-top: 20px;
    font-size: 16px;
    color: #666;
    text-align: center;
    line-height: 1.5;
  }

  /* Mobile Enhancement - Making Everything Larger */
  @media (max-width: 768px) {
    .form-content {
      padding: 30px 20px;
      border-radius: 14px;
      border-left-width: 8px;
    }

    .form-header {
      margin-bottom: 35px;
    }

    .form-title {
      font-size: 32px;
      margin-bottom: 12px;
    }

    .form-subtitle {
      font-size: 20px;
    }

    .consultation-form {
      gap: 25px;
    }

    .form-field {
      margin-bottom: 15px;
    }

    .form-field label {
      font-size: 22px;
      margin-bottom: 12px;
    }

    .form-field input,
    .form-field select,
    .form-field textarea {
      padding: 20px 24px;
      font-size: 22px;
      border-radius: 14px;
      border-width: 2px;
    }

    /* Make the placeholder text more visible */
    .form-field input::placeholder,
    .form-field textarea::placeholder,
    .form-field select::placeholder {
      color: #888;
    }

    .form-field select {
      padding-right: 40px; /* Extra space for the dropdown arrow */
      background-position: right 15px center;
    }

    .form-field textarea {
      min-height: 160px;
    }

    .submit-button {
      padding: 24px;
      font-size: 24px;
      border-radius: 14px;
      margin-top: 15px;
      border-left-width: 6px;
    }

    .disclaimer {
      margin-top: 25px;
      font-size: 18px;
    }
  }

  /* Even larger styles for smaller screens to ensure readability */
  @media (max-width: 480px) {
    .form-field input,
    .form-field select,
    .form-field textarea {
      padding: 22px 24px;
      font-size: 22px;
    }

    .submit-button {
      padding: 25px;
      font-size: 24px;
    }
  }
</style>
