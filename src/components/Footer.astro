---
import FadeIn from "../components/FadeIn.astro";
---

<footer class="site-footer">
  <div class="footer-grid">
    <FadeIn effect="fade" delay={400}>
      <div class="footer-columns">
        <FadeIn effect="fade" delay={0}>
          <div class="footer-brand">
            <div class="flex items-center gap-3 mb-2">
              <img
                src="/logo/USRad-Logo-final-white-text.png"
                alt="USRad Logo"
                class="footer-logo"
              />
              <a
                href="/"
                class="small-caps text-white tracking-wide text-sm font-semibold hover:text-[#e6c378] transition-colors"
              >
                Clarity
              </a>
            </div>
            <p class="footer-copy">&copy; 2025 USRad. All rights reserved.</p>
          </div>
        </FadeIn>

        <FadeIn effect="fade" delay={100}>
          <div>
            <h4>Explore</h4>
            <ul>
              <li><a href="#how-it-works">How It Works</a></li>
              <li><a href="#pricing">Pricing</a></li>
              <li><a href="#faq">FAQ</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div>
        </FadeIn>

        <FadeIn effect="fade" delay={200}>
          <div>
            <h4>Support</h4>
            <ul>
              <li><a href="#" class="footer-cta">Patient Login</a></li>
              <li><a href="#" class="footer-cta">Provider Portal</a></li>
              <li><a href="#" class="footer-cta">Request Imaging</a></li>
            </ul>
          </div>
        </FadeIn>

        <FadeIn effect="fade" delay={300}>
          <div>
            <h4>Legal</h4>
            <ul>
              <li><a href="#">Privacy Policy</a></li>
              <li><a href="#">Terms of Service</a></li>
              <li><a href="#">HIPAA Compliance</a></li>
            </ul>
          </div>
        </FadeIn>

        <FadeIn effect="fade" delay={400}>
          <div
            style="all: unset; display: flex; flex-direction: column; align-items: flex-start;"
          >
            <h4 style="font-size: 1rem; margin-bottom: 1rem; color: #ffffff;">
              Connect
            </h4>
            <a
              href="#"
              class="social-link"
            >
              <img
                src="/icons/facebook.svg"
                alt="Facebook"
                class="social-icon"
              />
              <span>Facebook</span>
            </a>
            <a
              href="#"
              class="social-link"
            >
              <img
                src="/icons/twitter.svg"
                alt="Twitter"
                class="social-icon"
              />
              <span>Twitter</span>
            </a>
            <a
              href="#"
              class="social-link"
            >
              <img
                src="/icons/linkedin.svg"
                alt="LinkedIn"
                class="social-icon"
              />
              <span>LinkedIn</span>
            </a>
          </div>
        </FadeIn>
      </div>

      <style>
        .site-footer {
          background-color: #003087;
          color: #ffffff;
          padding: 4rem 2rem 2rem;
          font-size: 0.875rem;
          position: relative;
        }

        .footer-grid {
          max-width: 1200px;
          margin: 0 auto;
        }

        .footer-columns {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
          gap: 4rem;
          text-align: center;
          justify-content: center;
        }

        .footer-brand {
          display: flex;
          flex-direction: column;
          gap: 0.75rem;
        }

        .footer-logo {
          max-width: 160px;
        }

        .footer-copy {
          font-size: 0.75rem;
          color: #f1f5f9;
        }

        .footer-columns h4 {
          font-size: 1rem;
          margin-bottom: 1rem;
          color: #ffffff;
        }

        .footer-columns ul {
          list-style: none;
          padding: 0;
          margin: 0;
        }

        .footer-columns li {
          margin-bottom: 0.5rem;
        }

        .footer-columns a {
          position: relative;
          color: #ffffff;
          font-size: .875rem;
          text-decoration: none;
          transition: all 0.3s ease;
          display: inline-block;
        }

        .footer-columns a::after {
          content: "";
          position: absolute;
          left: 0;
          bottom: -2px;
          width: 100%;
          height: 1px;
          background-color: #e6c378;
          transform: scaleX(0);
          transform-origin: left;
          transition: transform 0.3s ease;
        }

        .footer-columns a:hover {
          color: #e6c378;
          transform: translateY(-2px);
        }

        .footer-columns a:hover::after {
          transform: scaleX(1);
        }

        .footer-cta {
          font-variant: small-caps;
          font-weight: 400;
          letter-spacing: 0.03em;
          font-size: 0.875rem;
        }

        .connect-list {
          list-style: none;
          padding: 0;
          margin: 0;
          display: flex;
          flex-direction: column;
          gap: 0.75rem;
        }

        .social-link {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          color: #ffffff;
          text-decoration: none;
          transition: all 0.3s ease;
          margin-bottom: 0.5rem;
          padding: 0.25rem;
          border-radius: 0.25rem;
        }

        .social-link:hover {
          color: #e6c378;
          transform: translateX(5px);
          background-color: rgba(255, 255, 255, 0.1);
        }

        .social-icon {
          width: 20px;
          height: 20px;
          filter: brightness(0) invert(1);
          transition: transform 0.3s ease;
        }
        
        .social-link:hover .social-icon {
          transform: scale(1.2) rotate(5deg);
        }

        .small-caps {
          font-variant: small-caps;
        }
      </style>
    </FadeIn>
  </div>
</footer>