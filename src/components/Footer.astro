---
import FadeIn from "../components/FadeIn.astro";
---

<footer class="site-footer">
  <div class="footer-grid">
    <FadeIn effect="fade" delay={400}>
      <div class="footer-columns">
        <!-- Brand Column -->
        <FadeIn effect="fade" delay={0}>
          <div class="footer-brand">
            <div class="flex items-center gap-3 mb-2">
              <img
                src="/logo/USRad-Logo-final-white-text.png"
                alt="USRad Logo"
                class="footer-logo"
              />
              <a
                href="/"
                class="small-caps text-white tracking-wide text-sm font-semibold hover:text-[#e6c378] transition-colors"
              >
                Clarity
              </a>
            </div>
            <p class="footer-tagline">Quality imaging at transparent prices.</p>
            <p class="footer-copy">&copy; 2025 USRad. All rights reserved.</p>
          </div>
        </FadeIn>

        <!-- Learn Column - Updated with new structure -->
        <FadeIn effect="fade" delay={100}>
          <div>
            <h4>Learn</h4>
            <ul>
              <li><a href="/our-approach">Our Approach</a></li>
              <li><a href="/usrad-advantage">USRad Advantage</a></li>
              <li><a href="/technology">Our Technology</a></li>
              <li><a href="/team-commitment">Our Commitment</a></li>
            </ul>
          </div>
        </FadeIn>

        <!-- Resources Column -->
        <FadeIn effect="fade" delay={200}>
          <div>
            <h4>Resources</h4>
            <ul>
              <li><a href="/faq">FAQs</a></li>
              <li><a href="/pricing">Pricing</a></li>
              <li><a href="/news">News & Articles</a></li>
              <li><a href="/insurance">Insurance Info</a></li>
            </ul>
          </div>
        </FadeIn>

        <!-- Support Column -->
        <FadeIn effect="fade" delay={300}>
          <div>
            <h4>Support</h4>
            <ul>
              <li><a href="/contact">Contact Us</a></li>
              <li><a href="/partner">Partner With Us</a></li>
              <li><a href="#" class="footer-cta">Patient Portal</a></li>
              <li><a href="#" class="footer-cta">Provider Login</a></li>
            </ul>
          </div>
        </FadeIn>

        <!-- Connect Column with updated structure -->
        <FadeIn effect="fade" delay={400}>
          <div class="footer-connect">
            <h4>Connect</h4>
            <p class="contact-info">(800) USRad-24<br />patients@usrad.com</p>
            <div class="social-icons">
              <a href="#" class="social-icon-link" aria-label="Facebook">
                <img
                  src="/icons/facebook.svg"
                  alt="Facebook"
                  class="social-icon"
                />
              </a>
              <a href="#" class="social-icon-link" aria-label="Twitter">
                <img
                  src="/icons/twitter.svg"
                  alt="Twitter"
                  class="social-icon"
                />
              </a>
              <a href="#" class="social-icon-link" aria-label="LinkedIn">
                <img
                  src="/icons/linkedin.svg"
                  alt="LinkedIn"
                  class="social-icon"
                />
              </a>
            </div>
          </div>
        </FadeIn>
      </div>

      <!-- Legal Links -->
      <div class="footer-legal">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/hipaa">HIPAA Compliance</a>
        <a href="/accessibility">Accessibility</a>
      </div>

      <style>
        .site-footer {
          background-color: #003087;
          color: #ffffff;
          padding: 4rem 2rem 2rem;
          font-size: 0.875rem;
          position: relative;
        }

        .footer-grid {
          max-width: 1200px;
          margin: 0 auto;
        }

        .footer-columns {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
          gap: 4rem;
          margin-bottom: 3rem;
        }

        .footer-brand {
          display: flex;
          flex-direction: column;
          gap: 0.75rem;
        }

        .footer-logo {
          max-width: 160px;
        }

        .footer-tagline {
          color: #e6c378;
          font-style: italic;
          margin-bottom: 0.5rem;
        }

        .footer-copy {
          font-size: 0.75rem;
          color: #f1f5f9;
        }

        .footer-columns h4 {
          position: relative;
          font-size: 1rem;
          margin-bottom: 1.25rem;
          color: #ffffff;
          font-weight: 600;
          padding-bottom: 0.5rem;
        }

        .footer-columns h4::after {
          content: "";
          position: absolute;
          left: 0;
          bottom: 0;
          width: 2rem;
          height: 2px;
          background-color: #e6c378;
        }

        .footer-columns ul {
          list-style: none;
          padding: 0;
          margin: 0;
        }

        .footer-columns li {
          margin-bottom: 0.75rem;
        }

        .footer-columns a {
          position: relative;
          color: #ffffff;
          font-size: 0.875rem;
          text-decoration: none;
          transition: all 0.3s ease;
          display: inline-block;
        }

        .footer-columns a::after {
          content: "";
          position: absolute;
          left: 0;
          bottom: -2px;
          width: 100%;
          height: 1px;
          background-color: #e6c378;
          transform: scaleX(0);
          transform-origin: left;
          transition: transform 0.3s ease;
        }

        .footer-columns a:hover {
          color: #e6c378;
          transform: translateY(-2px);
        }

        .footer-columns a:hover::after {
          transform: scaleX(1);
        }

        .footer-cta {
          font-variant: small-caps;
          font-weight: 400;
          letter-spacing: 0.03em;
          font-size: 0.875rem;
        }

        .footer-connect {
          display: flex;
          flex-direction: column;
        }

        .contact-info {
          margin-bottom: 1rem;
          line-height: 1.5;
        }

        .social-icons {
          display: flex;
          gap: 1rem;
          margin-top: 0.5rem;
        }

        .social-icon-link {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 32px;
          height: 32px;
          background-color: rgba(255, 255, 255, 0.1);
          border-radius: 50%;
          transition: all 0.3s ease;
        }

        .social-icon-link:hover {
          background-color: #e6c378;
          transform: translateY(-3px) rotate(5deg);
        }

        .social-icon {
          width: 16px;
          height: 16px;
          filter: brightness(0) invert(1);
        }

        .footer-legal {
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          gap: 1.5rem;
          padding-top: 1.5rem;
          border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .footer-legal a {
          color: rgba(255, 255, 255, 0.7);
          font-size: 0.75rem;
          text-decoration: none;
          transition: color 0.3s ease;
        }

        .footer-legal a:hover {
          color: #e6c378;
        }

        .small-caps {
          font-variant: small-caps;
        }

        @media (max-width: 768px) {
          .footer-columns {
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 2rem;
            text-align: center;
          }

          .footer-columns h4::after {
            left: 50%;
            transform: translateX(-50%);
          }

          .footer-brand {
            align-items: center;
          }

          .footer-connect {
            align-items: center;
          }

          .footer-legal {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
          }
        }
      </style>
    </FadeIn>
  </div>
</footer>
