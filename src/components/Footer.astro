---
// src/components/Footer.astro
---

<footer class="footer">
  <!-- Main Footer with Blue Background -->
  <div class="footer-main">
    <div class="footer-container">
      <!-- Brand Info -->
      <div class="footer-brand">
        <img
          src="/logo/USRad-Logo-final.png"
          alt="USRad Logo"
          class="footer-logo"
        />
        <p class="footer-tagline">Medical Imaging Done Right</p>
      </div>

      <!-- Footer Columns -->
      <div class="footer-columns">
        <!-- About USRad Column -->
        <div class="footer-column">
          <h3 class="footer-heading">About USRad</h3>
          <ul class="footer-links">
            <li><a href="/about">About Us</a></li>
            <li><a href="/founder">Meet the Founder</a></li>
            <li><a href="/news">News</a></li>
            <li><a href="/careers">Careers</a></li>
          </ul>
        </div>

        <!-- For Patients Column -->
        <div class="footer-column">
          <h3 class="footer-heading">For Patients</h3>
          <ul class="footer-links">
            <li><a href="/our-approach">Our Approach</a></li>
            <li><a href="/locations">Find a Center</a></li>
            <li><a href="/faq">Patient FAQs</a></li>
            <li><a href="/contact">Contact Us</a></li>
          </ul>
        </div>

        <!-- For Imaging Centers Column -->
        <div class="footer-column">
          <h3 class="footer-heading">For Imaging Centers</h3>
          <p class="footer-text">
            Join our nationwide network of premium imaging centers and optimize
            your facility utilization.
          </p>
          <a href="/partner" class="footer-button">Learn About Joining</a>
        </div>

        <!-- Partner Resources Column -->
        <div class="footer-column">
          <h3 class="footer-heading">Partner Resources</h3>
          <ul class="footer-links">
            <li><a href="/partner/experience">Our Experience</a></li>
            <li><a href="/partner/model">Partnership Model</a></li>
            <li>
              <a href="/partner/implementation">Implementation Process</a>
            </li>
            <li><a href="/partner/benefits">Partner Benefits</a></li>
            <li><a href="/partner/faq">Partner FAQs</a></li>
            <li><a href="/partner/schedule">Schedule a Consultation</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="footer-container">
      <p class="copyright">
        &copy; {new Date().getFullYear()} USRad. All rights reserved.
      </p>
      <div class="legal-links">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Main Footer Styles */
  .footer-main {
    background-color: #003087; /* Signature blue background */
    color: white;
    padding: 4rem 0;
    font-family: "Manrope", sans-serif;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-brand {
    margin-bottom: 3rem;
  }

  .footer-logo {
    height: 60px;
    margin-bottom: 1rem;
    /* Add filter to make logo visible on blue background if needed */
    filter: brightness(0) invert(1);
  }

  .footer-tagline {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
  }

  .footer-heading {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1.5rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #cc9933; /* Gold hover state */
  }

  .footer-text {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .footer-button {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background-color: #cc9933; /* Gold button */
    color: #003087; /* Blue text */
    border-radius: 9999px;
    font-weight: 500;
    font-size: 0.875rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .footer-button:hover {
    background-color: #d9b053;
  }

  /* Footer Bottom Styles */
  .footer-bottom {
    background-color: #002266; /* Darker blue for the bottom section */
    padding: 2rem 0;
    font-family: "Manrope", sans-serif;
  }

  .footer-bottom .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .legal-links {
    display: flex;
    gap: 1.5rem;
  }

  .legal-links a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .legal-links a:hover {
    color: #cc9933;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-bottom .footer-container {
      flex-direction: column;
      text-align: center;
    }

    .legal-links {
      justify-content: center;
    }
  }
</style>
