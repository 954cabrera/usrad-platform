<style>
  /* Footer Styles */
  .footer {
    font-family: "Manrope", sans-serif;
  }

  .footer-main {
    background: linear-gradient(135deg, #003087 0%, #002470 100%);
    color: white;
    padding: 4rem 0;
    position: relative;
    overflow: hidden;
  }

  /* Subtle background pattern */
  .footer-main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(
        circle at 20% 20%,
        rgba(204, 153, 51, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(204, 153, 51, 0.05) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .footer-logo-section {
    margin-bottom: 3rem;
  }

  .footer-logo {
    height: 60px;
    margin-bottom: 1rem;
    filter: brightness(0) invert(1);
  }

  .footer-tagline {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
  }

  /* Contact Information */
  .footer-contact {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-icon {
    font-size: 1rem;
  }

  .contact-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: #cc9933;
  }

  /* Social Media Links */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .social-link:hover {
    background: #cc9933;
    color: #003087;
    transform: translateY(-2px);
  }

  .footer-columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  .footer-heading {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: white;
    position: relative;
  }

  .footer-heading::after {
    content: "";
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 30px;
    height: 2px;
    background: #cc9933;
    border-radius: 1px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    display: inline-block;
    padding-bottom: 5px;
    transition: all 0.3s ease;
  }

  .footer-link::before {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #cc9933;
    visibility: hidden;
    transition: all 0.3s ease-in-out;
  }

  .footer-link:hover {
    color: #cc9933;
    transform: translateX(5px);
  }

  .footer-link:hover::before {
    visibility: visible;
    width: 100%;
  }

  .footer-text {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .footer-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #cc9933 0%, #b8861f 100%);
    color: white;
    border-radius: 25px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(204, 153, 51, 0.3);
  }

  .footer-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(204, 153, 51, 0.4);
  }

  /* Quick Links */
  .quick-links {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
  }

  .quick-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  .quick-link:hover {
    color: #cc9933;
  }

  /* Newsletter Section */
  .newsletter-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    align-items: center;
  }

  .newsletter-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.5rem;
  }

  .newsletter-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
  }

  .newsletter-form {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .newsletter-input {
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 25px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 0.9rem;
    width: 250px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #cc9933;
    background: rgba(255, 255, 255, 0.15);
  }

  .newsletter-button {
    padding: 0.75rem 1.5rem;
    background: #cc9933;
    color: #003087;
    border: none;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-button:hover {
    background: #b8861f;
    transform: translateY(-1px);
  }

  .footer-bottom {
    background-color: #002470;
    padding: 1.5rem 0;
  }

  .footer-bottom .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  /* Certification Badges */
  .certifications {
    display: flex;
    gap: 1rem;
  }

  .cert-badge {
    background: rgba(204, 153, 51, 0.2);
    color: #cc9933;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid rgba(204, 153, 51, 0.3);
  }

  .legal-links {
    display: flex;
    gap: 1.5rem;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .newsletter-section {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .newsletter-form {
      flex-direction: column;
      width: 100%;
    }

    .newsletter-input {
      width: 100%;
    }

    .footer-contact {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-bottom .container {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .certifications {
      justify-content: center;
    }

    .legal-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-main {
      padding: 3rem 0;
    }

    .newsletter-section {
      padding: 1.5rem;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
