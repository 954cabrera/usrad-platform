  }

  .footer-copy {
    font-size: 0.75rem;
    color: #475569;
  }

  .footer-columns h4 {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #0e1b2a;
  }

  .footer-columns ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-columns li {
    margin-bottom: 0.5rem;
  }

  .footer-columns a {
    color: #0e1b2a;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-columns a:hover {
    color: #e6c378;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons img {
    height: 24px;
    width: 24px;
  }

  .chatbot-toggle {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    background-color: #eab308;
    color: #0f172a;
    border: none;
    padding: 0.75rem 1.25rem;
    border-radius: 2rem;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
    z-index: 9999;
  }
</style>
