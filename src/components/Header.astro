<style>
  .site-header {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1000;
    background: #ffffff;
    border-bottom: 1px solid #e5e7eb;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
    padding: 1rem 2rem;
    text-align: left;
  }
  .header-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 84px;
  }
  .brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #0e1b2a;
    font-weight: bold;
    font-size: 1.25rem;
    gap: 0.75rem;
  }
  .brand-logo {
    height: 64px;
    width: auto;
    object-fit: contain;
  }
  .nav-desktop {
    display: none;
    justify-content: center;
    gap: 2rem;
    align-items: center;
  }
  .nav-desktop a {
    text-decoration: none;
    color: #0e1b2a;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  .nav-desktop a:hover {
    color: #e6c378;
  }
  .nav-mobile summary {
    list-style: none;
    cursor: pointer;
    color: #0e1b2a;
    font-size: 1.5rem;
  }
  .nav-mobile .dropdown {
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border-top: 1px solid #f1f5f9;
    padding: 1rem 0;
  }
  .nav-mobile .dropdown a {
    padding: 0.5rem 0;
    color: #0e1b2a;
    text-decoration: none;
  }
  .nav-mobile .dropdown a:hover {
    color: #e6c378;
  }
  @media (min-width: 768px) {
    .nav-desktop {
      display: flex;
    }
    .nav-mobile {
      display: none;
    }
  }
</style>
