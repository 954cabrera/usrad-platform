<!-- FILE: HeroSection.astro -->
<section class="hero-section">
  <div class="hero-overlay"></div>
  <img
    src="/images/patient-smiling.jpg"
    alt="Smiling patient"
    class="hero-bg"
  />

  <div class="hero-content">
    <h1>Affordable Imaging.<br />Trusted Care.</h1>
    <p>
      High-quality MRIs without the high price. No insurance required.
      Transparent pricing and fast results.
    </p>

    <div class="smartmatch-badge">
      <span>
        Powered by <em>SmartMatch<sup>â„¢</sup></em>
      </span>
    </div>

    <div class="hero-buttons">
      <button class="btn-primary">Get Started</button>
      <button class="btn-secondary">View Pricing</button>
    </div>
  </div>

  <div class="hero-cta-bar">
    <span>Need an MRI? Book today and save.</span>
    <button class="btn-cta">Schedule Now</button>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 700px;
    background-color: #0e1b2a;
    color: #e6c378;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(14, 27, 42, 0.3);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    height: 100%;
    padding: 2rem;
    text-align: right;
    max-width: 900px;
    margin-left: auto;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
  }

  .hero-content p {
    margin-top: 1rem;
    font-size: 1.25rem;
    color: #f1d8a1;
    max-width: 400px;
  }

  .smartmatch-badge {
    margin-top: 1rem;
    background-color: white;
    color: #0e1b2a;
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 0 12px rgba(255, 255, 255, 0.5);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.5);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }
  }

  .hero-buttons {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    background-color: #e6c378;
    color: #0e1b2a;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: bold;
    border: none;
    cursor: pointer;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid #e6c378;
    color: #f1d8a1;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: bold;
    cursor: pointer;
  }

  .btn-secondary:hover {
    background-color: rgba(241, 216, 161, 0.1);
    color: #e6c378;
  }

  .hero-cta-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #0f172a;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    z-index: 999;
  }

  .btn-cta {
    background-color: white;
    color: #0e1b2a;
    font-weight: bold;
    padding: 0.5rem 1.25rem;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
  }
</style>
