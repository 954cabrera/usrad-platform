// src/components/UtilityHeader.astro
---

<div class="utility-header">
  <div class="utility-container">
    <div class="relative group">
      <a href="/managed-care?ref=topnav" class="utility-link">
        For Imaging Centers
        <svg
          class="utility-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>

      <!-- Tooltip -->
      <div
        class="absolute right-0 mt-2 w-max bg-[#003087] text-white text-xs sm:text-sm px-3 py-2 rounded-xl shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-50"
      >
        <div
          class="absolute top-[-6px] right-20 w-3 h-3 bg-[#003087] transform rotate-45"
        >
        </div>
        Join our credentialed imaging network
      </div>
    </div>
  </div>
</div>

<style>
  .utility-header {
    background-color: #f8f2e1;
    padding: 0.25rem 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 60; /* Higher than navbar z-index */
    height: 2rem; /* Set explicit height */
  }

  .utility-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100%;
  }

  .utility-link {
    font-size: 0.875rem;
    color: #003087;
    font-weight: 500;
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .utility-link:hover {
    color: #cc9933;
  }

  .utility-icon {
    width: 0.75rem;
    height: 0.75rem;
    margin-left: 0.25rem;
  }

  /* Adjust main navbar positioning to account for utility header */
  :global(.navbar) {
    top: 2rem; /* Height of utility header */
  }

  @media (max-width: 768px) {
    .utility-header {
      height: 1.75rem; /* Maintain more similar height to desktop */
    }

    .utility-container {
      padding: 0 1rem;
    }

    .utility-link {
      font-size: 0.75rem; /* Smaller font size */
    }

    .utility-icon {
      width: 0.65rem; /* Smaller icon */
      height: 0.65rem;
    }

    /* Keep the navbar consistent with desktop positioning */
    :global(.navbar) {
      top: 1.75rem; /* Match the utility header height */
    }
  }
</style>
