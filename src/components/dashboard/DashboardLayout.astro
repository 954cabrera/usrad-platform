      }
      .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      /* Large screens */
      @media (min-width: 1024px) {
        .lg\:hidden {
          display: none;
        }
        .lg\:mobile-menu-open {
          transform: translateX(0);
        }
        .lg\:translate-x-0 {
          transform: translateX(0);
        }
        .lg\:ml-72 {
          margin-left: 288px;
        }
