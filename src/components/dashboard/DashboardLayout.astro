---
// src/components/dashboard/DashboardLayout.astro
export interface Props {
  title: string;
  user?: any;
  imagingCenter?: any;
}

const { title, user, imagingCenter } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | USRad Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              "usrad-navy": "#003087",
              "usrad-gold": "#cc9933",
              "usrad-light": "#f5f9ff",
              "usrad-cream": "#fefbf5",
            },
            fontFamily: {
              sans: ["Manrope", "system-ui", "sans-serif"],
            },
            animation: {
              "fade-in": "fadeIn 0.5s ease-in-out",
              "slide-up": "slideUp 0.3s ease-out",
              "pulse-slow": "pulse 3s infinite",
            },
          },
        },
      };
    </script>
    <style>
      body {
        font-family: "Manrope", sans-serif;
        overflow-x: hidden;
        background: linear-gradient(135deg, #f5f9ff 0%, #ffffff 100%);
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideUp {
        from {
          transform: translateY(20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .sidebar-transition {
        transition:
          transform 0.3s ease-in-out,
          width 0.3s ease-in-out;
      }

      .nav-link {
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
      }

      .nav-link::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 0;
        background: linear-gradient(
          90deg,
          rgba(204, 153, 51, 0.1),
          rgba(204, 153, 51, 0.2)
        );
        transition: width 0.3s ease;
        z-index: 0;
      }

      .nav-link:hover::before,
      .nav-link.active::before {
        width: 100%;
      }

      .nav-link:hover {
        background: rgba(204, 153, 51, 0.1);
        border-left: 4px solid #cc9933;
        transform: translateX(4px);
      }

      .nav-link.active {
        background: rgba(204, 153, 51, 0.15);
        border-left: 4px solid #cc9933;
        color: #cc9933;
        font-weight: 600;
      }

      .nav-link > * {
        position: relative;
        z-index: 1;
      }

      .dashboard-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 48, 135, 0.08);
        border: 1px solid rgba(0, 48, 135, 0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .dashboard-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #003087, #cc9933);
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .dashboard-card:hover {
        box-shadow: 0 12px 35px rgba(0, 48, 135, 0.15);
        transform: translateY(-4px);
      }

      .dashboard-card:hover::before {
        opacity: 1;
      }

      .mobile-menu-open {
        transform: translateX(0);
      }

      .mobile-menu-closed {
        transform: translateX(-100%);
      }

      .stat-icon {
        background: linear-gradient(135deg, #003087, #0040a0);
        animation: pulse-slow;
      }

      .gradient-text {
        background: linear-gradient(135deg, #003087, #cc9933);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .btn-primary {
        background: linear-gradient(135deg, #003087, #0040a0);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .btn-primary::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition:
          width 0.6s,
          height 0.6s;
      }

      .btn-primary:hover::before {
        width: 300px;
        height: 300px;
      }

      .btn-secondary {
        background: linear-gradient(135deg, #cc9933, #e6b84d);
        color: #003087;
        font-weight: 600;
      }

      .status-badge {
        position: relative;
        overflow: hidden;
      }

      .status-badge::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent
        );
        transition: left 0.6s;
      }

      .status-badge:hover::before {
        left: 100%;
      }
    </style>
  </head>

  <body class="bg-gradient-to-br from-usrad-light to-white">
    <!-- Mobile Menu Overlay -->
    <div
      id="mobile-overlay"
      class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"
    >
    </div>

    <!-- Sidebar -->
    <aside
      id="sidebar"
      class="fixed top-0 left-0 z-50 w-72 h-screen bg-gradient-to-b from-usrad-navy to-blue-900 text-white sidebar-transition mobile-menu-closed lg:mobile-menu-open lg:translate-x-0 shadow-2xl"
    >
      <!-- Logo Section -->
      <div
        class="flex items-center justify-between p-6 border-b border-blue-800/30"
      >
        <div class="flex items-center space-x-3">
          <div
            class="w-10 h-10 bg-usrad-gold rounded-xl flex items-center justify-center font-bold text-usrad-navy text-lg shadow-lg"
          >
            U
          </div>
          <div>
            <h1 class="text-xl font-bold text-white">USRad</h1>
            <p class="text-xs text-blue-200">Imaging Dashboard</p>
          </div>
        </div>
        <button
          id="close-sidebar"
          class="lg:hidden text-white hover:text-usrad-gold transition-colors p-2"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- User Info -->
      {
        user && (
          <div class="p-6 border-b border-blue-800/30 bg-gradient-to-r from-blue-800/20 to-transparent">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-br from-usrad-gold to-yellow-400 rounded-full flex items-center justify-center font-bold text-usrad-navy text-lg shadow-lg">
                {user.firstName?.[0] || user.email[0].toUpperCase()}
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-white truncate">
                  {user.firstName && user.lastName
                    ? `${user.firstName} ${user.lastName}`
                    : user.email}
                </p>
                {imagingCenter && (
                  <p class="text-sm text-blue-200 truncate">
                    {imagingCenter.name}
                  </p>
                )}
                <div class="flex items-center mt-1">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse" />
                  <span class="text-xs text-blue-200 ml-2">Online</span>
                </div>
              </div>
            </div>
          </div>
        )
      }

      <!-- Navigation -->
      <nav class="flex-1 px-4 py-6 space-y-2">
        <div
          class="text-xs font-semibold text-blue-300 uppercase tracking-wider mb-4 px-4"
        >
          Main Menu
        </div>

        <a
          href="/dashboard"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath === "/dashboard" ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Dashboard</span
          >
        </a>

        <a
          href="/dashboard/appointments"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath.startsWith("/dashboard/appointments") ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Appointments</span
          >
          <div
            class="ml-auto bg-usrad-gold text-usrad-navy text-xs font-bold px-2 py-1 rounded-full"
          >
            12
          </div>
        </a>

        <a
          href="/dashboard/analytics"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath.startsWith("/dashboard/analytics") ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Analytics</span
          >
        </a>

        <div
          class="text-xs font-semibold text-blue-300 uppercase tracking-wider mb-4 px-4 pt-6"
        >
          Management
        </div>

        <a
          href="/dashboard/patients"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath.startsWith("/dashboard/patients") ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
              ></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Patients</span
          >
        </a>

        <a
          href="/dashboard/reports"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath.startsWith("/dashboard/reports") ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Reports</span
          >
        </a>

        <a
          href="/dashboard/settings"
          class={`nav-link flex items-center px-4 py-3 rounded-xl text-sm font-medium group ${currentPath.startsWith("/dashboard/settings") ? "active" : ""}`}
        >
          <div class="stat-icon p-2 rounded-lg mr-3">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <span class="group-hover:translate-x-1 transition-transform"
            >Settings</span
          >
        </a>
      </nav>

      <!-- Logout Section -->
      <div
        class="p-4 border-t border-blue-800/30 bg-gradient-to-r from-red-900/10 to-transparent"
      >
        <form action="/api/auth/logout" method="POST">
          <button
            type="submit"
            class="w-full flex items-center px-4 py-3 text-sm font-medium text-red-300 hover:text-red-200 hover:bg-red-900/20 rounded-xl transition-all duration-200 group"
          >
            <div
              class="p-2 rounded-lg mr-3 bg-red-900/30 group-hover:bg-red-900/50 transition-colors"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                ></path>
              </svg>
            </div>
            <span class="group-hover:translate-x-1 transition-transform"
              >Sign Out</span
            >
          </button>
        </form>
      </div>
    </aside>

    <!-- Main Content -->
    <div class="lg:ml-72 min-h-screen">
      <!-- Top Header -->
      <header
        class="bg-white/80 backdrop-blur-md shadow-sm border-b border-gray-200/50 px-6 py-4 sticky top-0 z-30"
      >
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <button
              id="menu-toggle"
              class="lg:hidden text-gray-600 hover:text-usrad-navy mr-2 p-2 rounded-lg hover:bg-gray-100 transition-colors"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
            <div>
              <h1 class="text-2xl font-bold gradient-text">{title}</h1>
              <p class="text-sm text-gray-500">
                Welcome back, {user?.firstName || "User"}
              </p>
            </div>
          </div>

          <div class="flex items-center space-x-4">
            <!-- Quick Actions -->
            <button
              class="btn-primary text-white px-4 py-2 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 text-sm font-semibold"
            >
              <span class="relative z-10">+ New Patient</span>
            </button>

            <!-- Notifications -->
            <button
              class="relative text-gray-600 hover:text-usrad-navy p-2 rounded-lg hover:bg-gray-100 transition-colors"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path>
              </svg>
              <span
                class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center animate-pulse"
                >3</span
              >
            </button>

            <!-- Profile -->
            <div class="flex items-center space-x-3 bg-gray-50 rounded-lg p-2">
              <div
                class="w-8 h-8 bg-gradient-to-br from-usrad-gold to-yellow-400 rounded-lg flex items-center justify-center font-bold text-usrad-navy text-sm"
              >
                {user?.firstName?.[0] || user?.email[0].toUpperCase() || "U"}
              </div>
              <span class="text-sm font-medium text-gray-700 hidden sm:block">
                {user?.firstName || "User"}
              </span>
            </div>
          </div>
        </div>
      </header>

      <!-- Page Content -->
      <main class="p-6 animate-fade-in">
        <slot />
      </main>
    </div>

    <script>
      // Mobile menu functionality
      const menuToggle = document.getElementById("menu-toggle");
      const closeSidebar = document.getElementById("close-sidebar");
      const sidebar = document.getElementById("sidebar");
      const overlay = document.getElementById("mobile-overlay");

      function openSidebar() {
        sidebar.classList.remove("mobile-menu-closed");
        sidebar.classList.add("mobile-menu-open");
        overlay.classList.remove("hidden");
      }

      function closeSidebarFn() {
        sidebar.classList.remove("mobile-menu-open");
        sidebar.classList.add("mobile-menu-closed");
        overlay.classList.add("hidden");
      }

      menuToggle?.addEventListener("click", openSidebar);
      closeSidebar?.addEventListener("click", closeSidebarFn);
      overlay?.addEventListener("click", closeSidebarFn);

      // Close sidebar on window resize if desktop
      window.addEventListener("resize", () => {
        if (window.innerWidth >= 1024) {
          closeSidebarFn();
        }
      });

      // Add loading states and smooth transitions
      document.addEventListener("DOMContentLoaded", () => {
        // Add staggered animations to cards
        const cards = document.querySelectorAll(".dashboard-card");
        cards.forEach((card, index) => {
          card.style.animationDelay = `${index * 100}ms`;
          card.classList.add("animate-slide-up");
        });
      });
    </script>
  </body>
</html>
