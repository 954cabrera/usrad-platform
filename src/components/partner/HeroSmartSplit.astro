<!-- HeroSmartSplit.astro - Hero Only -->
<section class="bg-white py-24 px-6 lg:px-12">
  <div
    class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-16 items-center"
  >
    <!-- LEFT: HEADLINE + CTA -->
    <div class="space-y-6" data-aos="fade-right">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
        Simpler imaging partnerships.<br />
        Stronger patient pipelines.
      </h1>
      <p class="text-lg text-gray-600">
        USRad connects your center to thousands of self-pay patients—no
        referrals required, no tech overhead. Schedule faster. Get paid quicker.
        Expand smarter.
      </p>
      <div class="flex gap-4 flex-wrap">
        <a
          href="#form"
          class="bg-blue-700 hover:bg-blue-800 text-white px-6 py-3 rounded-full font-semibold transition"
        >
          Join the Network
        </a>
        <a
          href="#how-it-works"
          class="border border-blue-700 text-blue-700 hover:text-white hover:bg-blue-700 px-6 py-3 rounded-full font-semibold transition"
        >
          See how it works
        </a>
      </div>
    </div>

    <!-- RIGHT: UI CLUSTER -->
    <div class="relative w-full h-full" data-aos="fade-left">
      <div
        class="relative bg-gray-100 p-6 rounded-3xl shadow-lg overflow-hidden max-w-md mx-auto space-y-6"
      >
        <img
          src="/images/hero-doctor-patient.jpg"
          alt="Radiologist with patient"
          class="w-full h-56 object-cover rounded-xl shadow"
        />

        <!-- UI card: SmartMatch -->
        <div
          class="bg-white p-4 rounded-xl shadow flex items-center justify-between"
        >
          <div>
            <p class="text-sm text-gray-500">New SmartMatch™</p>
            <p class="text-md font-semibold text-gray-900">Patient: Lisa D.</p>
            <p class="text-xs text-blue-600">Location: Atlanta, GA</p>
          </div>
          <button class="text-sm bg-blue-100 text-blue-700 px-3 py-1 rounded-lg"
            >View</button
          >
        </div>

        <!-- Metrics -->
        <div class="flex justify-between text-center text-sm text-gray-600">
          <div>
            <p class="font-bold text-lg text-blue-700">82%</p>
            <p>Faster Pay</p>
          </div>
          <div>
            <p class="font-bold text-lg text-blue-700">12 min</p>
            <p>Avg Scheduling</p>
          </div>
          <div>
            <p class="font-bold text-lg text-blue-700">4.9★</p>
            <p>Center Rating</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
