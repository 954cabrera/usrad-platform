---
import Header from "../components/Header.astro";
import UtilityHeader from "../components/UtilityHeader.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title">USRadiology</slot></title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <UtilityHeader />
    <Header />

    <main>
      <slot />
    </main>

    <footer>
      <p class="footer-text">&copy; 2025 USRadiology. All rights reserved.</p>
    </footer>
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    color: #1e293b;
    background-color: #fff;
  }

  footer {
    background-color: #0f172a;
    color: #fff;
    text-align: center;
    padding: 2rem 1rem;
  }

  .footer-text {
    margin: 0;
  }
</style>
