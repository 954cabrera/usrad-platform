---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import ChatbotToggle from "../components/ChatbotToggle.astro";
import FadeIn from "../components/FadeIn.astro";
import AOSInit from "../components/AOSInit.astro";
import AboutHero from "../components/AboutHero.astro";
import AboutVision from "../components/AboutVision.astro";
---

<MainLayout>
  <AOSInit />
  <AboutHero />

  <!-- Elegant divider -->
  <div class="flex justify-center items-center my-12 md:my-16 lg:my-20">
    <div class="w-2 h-2 rounded-full bg-[#cc9933] mr-2"></div>
    <div class="w-16 md:w-24 h-1 bg-[#e6c378] opacity-80 rounded-md"></div>
    <div class="w-2 h-2 rounded-full bg-[#cc9933] ml-2"></div>
  </div>

  <AboutVision />

  <!-- Elegant divider -->
  <div class="flex justify-center items-center my-12 md:my-16 lg:my-20">
    <div class="w-2 h-2 rounded-full bg-[#cc9933] mr-2"></div>
    <div class="w-16 md:w-24 h-1 bg-[#e6c378] opacity-80 rounded-md"></div>
    <div class="w-2 h-2 rounded-full bg-[#cc9933] ml-2"></div>
  </div>

  <!-- Founding Team Section for About Page -->
  <section id="founder-section" class="py-32 px-6 bg-[#f0f4f9] text-[#003087]">
    <div class="max-w-6xl mx-auto">
      <p class="text-lg md:text-xl italic mb-8 text-center">
        Our values aren't just words on a page—they're brought to life by the
        people who founded USRad...
      </p>
      <h2 class="text-4xl md:text-5xl font-semibold mb-12 text-center">
        Our Founding Team
      </h2>

      <div class="grid md:grid-cols-2 gap-16 items-start">
        <!-- Michael's Profile -->
        <div
          class="flex flex-col justify-between h-full text-center md:text-left"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div>
            <img
              src="/images/michael.jpg"
              alt="Michael Cabrera"
              class="w-72 h-72 object-cover rounded-xl shadow-xl mx-auto"
            />
            <div class="mt-6">
              <h3
                class="text-2xl md:text-3xl font-semibold text-[#003087] mb-1"
              >
                Michael Cabrera
              </h3>
              <p
                class="text-lg md:text-xl text-[#e6c378] font-medium mt-0 mb-4"
              >
                Founder & CEO
              </p>
              <p
                class="text-lg md:text-xl text-[#003087] leading-relaxed min-h-[120px]"
              >
                With over 25 years transforming diagnostic imaging, Michael led
                one of the fastest-growing healthcare networks in the U.S. —
                achieving 1,236% growth before its acquisition by a public
                company. He’s a graduate of the elite “Birthing of Giants”
                program, co-created by MIT, Inc. Magazine, and EO.
              </p>
            </div>
          </div>
          <div class="pt-6">
            <a
              href="/founder"
              class="inline-block px-6 py-3 bg-[#003087] text-white rounded-full font-medium hover:bg-[#002266] transition-colors border-l-4 border-[#e6c378]"
              title="Learn about Michael Cabrera’s journey and vision for USRad"
              aria-label="Meet the founder who built USRad"
            >
              Meet the Founder Who Built USRad →
            </a>
          </div>
        </div>

        <!-- Donna's Profile -->
        <div
          class="flex flex-col justify-between h-full text-center md:text-left"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div>
            <img
              src="/images/donna.jpg"
              alt="Donna Cabrera"
              class="w-72 h-72 object-cover rounded-xl shadow-xl mx-auto"
            />
            <div class="mt-6">
              <h3
                class="text-2xl md:text-3xl font-semibold text-[#003087] mb-1"
              >
                Donna Cabrera
              </h3>
              <p
                class="text-lg md:text-xl text-[#e6c378] font-medium mt-0 mb-4"
              >
                Co-Founder & Patient Advocacy Advisor
              </p>
              <p
                class="text-lg md:text-xl text-[#003087] leading-relaxed min-h-[120px]"
              >
                With a career rooted in service and compliance, Donna helped
                shape the gold standard in patient care. Her leadership ensures
                every patient’s journey is grounded in dignity and care.
              </p>
            </div>
          </div>
          <div class="pt-6">
            <a
              href="/co-founder"
              class="inline-block px-6 py-3 bg-[#003087] text-white rounded-full font-medium hover:bg-[#002266] transition-colors border-l-4 border-[#e6c378]"
              title="Learn about Donna Cabrera’s journey and patient advocacy work"
              aria-label="Meet the co-founder and patient advocacy advisor"
            >
              Learn More About Donna →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
