<MainLayout>
  <!-- Hero Story Block - Split Title Layout with SVG Illustrations -->
  <section class="bg-[#f8f2e1] text-[#003087] py-32 px-6">
    <div class="max-w-6xl mx-auto">
      <!-- First Part: Problem Statement -->
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <!-- Left side with first part of title -->
        <div>
          <h1
            class="text-5xl md:text-6xl font-semibold leading-tight mb-8 text-[#003087]"
          >
