<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Background Debug Test</title>
    <meta name="color-scheme" content="light only" />
    <meta name="theme-color" content="#fcf9f0" />
    <style>
      :root {
        font-family: sans-serif;
      }

      body {
        margin: 0;
        padding: 0;
      }

      .toggle-bar {
        display: flex;
        justify-content: center;
        padding: 1rem;
        background-color: #cc9933;
      }

      .toggle-bar button {
        background: #003087;
        color: white;
        font-weight: bold;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
      }

      .test-box {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
        font-size: 1.5rem;
        padding: 2rem;
        transition: all 0.3s ease-in-out;
      }

      .working {
        background-color: #fcf9f0;
        color: #003087;
        border: 3px dashed #cc9933;
      }

      .failing {
        background-color: #2b2b2b;
        color: #ffffff;
        border: 3px dashed red;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const testBox = document.querySelector(".test-box");
        const toggleBtn = document.querySelector("#toggle");

        toggleBtn.addEventListener("click", () => {
          testBox.classList.toggle("working");
          testBox.classList.toggle("failing");
        });
      });
    </script>
  </head>

  <body>
    <div class="toggle-bar">
      <button id="toggle">Toggle Test Mode</button>
    </div>
    <div class="test-box working">
      <p>
        This is the <strong>working</strong> test.<br />
        Toggle to compare how broken it looks when dark overrides aren't fixed.
      </p>
    </div>
  </body>
</html>
