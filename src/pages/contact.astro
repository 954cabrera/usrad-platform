---
import Layout from "../layouts/MainLayout.astro";
---

<Layout>
  <section id="contact" class="contact-section fade-in">
    <div class="outer-wrap">
      <div class="container">
        <!-- Left: Form -->
        <div class="form-column animated-block">
          <h1>Contact Us</h1>
          <p class="subtext">
            Whether you’re a patient or provider, we’re here to help you
            navigate your imaging options with clarity and confidence.
          </p>

          <form id="contact-form" novalidate>
            <div class="field-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" required />
              <span class="error-message" id="name-error"></span>
            </div>

            <div class="field-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required />
              <span class="error-message" id="email-error"></span>
            </div>

            <div class="field-group">
              <label for="message">Your Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
              <span class="error-message" id="message-error"></span>
            </div>

            <button type="submit">
              <span class="button-label">Send Message</span>
              <span class="spinner hidden" id="spinner"></span>
            </button>
          </form>

          <div id="thank-you" class="thank-you hidden">
            <div class="checkmark">✓</div>
            <h2>Thank you!</h2>
            <p>We've received your message and will be in touch shortly.</p>
          </div>
        </div>

        <!-- Right: Contact Info -->
        <div class="info-column animated-block">
          <div class="info-block">
            <h4>Email</h4>
            <p>support@usrad.com</p>
          </div>
          <div class="info-block">
            <h4>Phone</h4>
            <p>1-800-USRAD-24</p>
          </div>
          <div class="info-block">
            <h4>Headquarters</h4>
            <p>
              123 Radiology Way, Suite 100<br />
              Los Angeles, CA 90001
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script type="module" src="/scripts/contact.js"></script>
  <link rel="stylesheet" href="/styles/contact.css" />
</Layout>
