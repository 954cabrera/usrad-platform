---
import DashboardLayout from "../../components/dashboard/DashboardLayout.astro";
import SkeletonAppointmentsSystem from "../../components/dashboard/SkeletonAppointmentsSystem";
---

<DashboardLayout
  title="Appointments (Demo View)"
  user={null}
  imagingCenter={null}
>
  <div
    class="bg-yellow-100 border-l-4 border-yellow-500
text-yellow-900 p-4 rounded mb-6"
    role="alert"
  >
    <p class="font-bold">Demo Mode</p>
    <p>
      You are viewing sample appointment data. Complete your PSA to unlock
      real-time scheduling and appointments management.
    </p>
  </div>
  <SkeletonAppointmentsSystem client:load />
</DashboardLayout>
