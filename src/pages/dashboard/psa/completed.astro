---
// src/pages/dashboard/psa/completed.astro
export const prerender = false;

const { searchParams } = Astro.url;
const submissionId = searchParams.get("submission_id");

// You can fetch additional details about the completion here
// const completionDetails = await getCompletionDetails(submissionId);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PSA Completed - USRad</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <div
      class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
    >
      <div class="max-w-md w-full space-y-8">
        <div class="text-center">
          <!-- Success Icon -->
          <div
            class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6"
          >
            <svg
              class="h-8 w-8 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>

          <!-- Success Message -->
          <h1 class="text-3xl font-bold text-gray-900 mb-4">
            PSA Completed Successfully!
          </h1>

          <p class="text-gray-600 mb-8">
            Your Provider Service Agreement has been signed and processed. You
            should receive a copy via email shortly.
            <br /><br />
            <strong>Next:</strong> Please log back into your provider account to
            continue.
          </p>

          <!-- Submission Details -->
          {
            submissionId && (
              <div class="bg-white rounded-lg border border-gray-200 p-4 mb-8">
                <h3 class="text-sm font-medium text-gray-700 mb-2">
                  Agreement Details
                </h3>
                <p class="text-sm text-gray-600">
                  Submission ID: {submissionId}
                </p>
                <p class="text-sm text-gray-600">
                  Completed: {new Date().toLocaleDateString()}
                </p>
              </div>
            )
          }

          <!-- Next Steps -->
          <div class="bg-blue-50 rounded-lg p-4 mb-8">
            <h3 class="text-sm font-medium text-blue-900 mb-2">What's Next?</h3>
            <ul class="text-sm text-blue-700 space-y-1 text-left">
              <li>✓ Document signed and legally binding</li>
              <li>✓ Copy sent to your email</li>
              <li>✓ USRad team notified</li>
              <li>• Portal setup will begin shortly</li>
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <a
              href="/imaginglogin"
              class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
            >
              Return to Dashboard
            </a>

            <a
              href="/imaginglogin"
              class="w-full flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
            >
              Continue Onboarding
            </a>
          </div>

          <!-- Support Contact -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-xs text-gray-500">
              Questions about your PSA?
              <a
                href="mailto:support@usrad.com"
                class="text-blue-600 hover:text-blue-500"
              >
                Contact Support
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Auto-close tab script (optional) -->
    <script>
      // Optional: Auto-close this tab after a delay if opened in popup
      if (window.name === "docuseal_completion" || window.opener) {
        setTimeout(() => {
          if (
            confirm(
              "PSA completed! Close this tab and return to the main window?"
            )
          ) {
            window.close();
          }
        }, 3000);
      }
    </script>
  </body>
</html>
