        corporate_address: document.getElementById("corporate-address").value,
        phone: document.getElementById("organization-phone").value,
        email: document.getElementById("organization-email").value,
        signer_name: document.getElementById("signer_name").value,
        signer_title: document.getElementById("signer_title").value
      };
      

          console.log("💾 Attempting upsert with orgData:", orgData);

          const { data, error } = await supabase
            .from("corporate_entities")
            .upsert(orgData, { onConflict: "user_id" });

          if (error) {
            console.error("❌ Error saving organization:", error);
            alert("❌ Failed to save organization: " + error.message);
          } else {
            console.log("✅ Organization saved successfully:", data);
            alert("✅ Organization information saved!");
