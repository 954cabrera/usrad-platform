---
import DashboardLayout from "../../../components/dashboard/DashboardLayout.astro";
---

<DashboardLayout title="Settings" user={null}>
  <div class="max-w-7xl mx-auto p-6 space-y-8">
    <!-- Header Section -->
    <div class="border-b border-gray-200 pb-6">
      <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
      <p class="text-lg text-gray-600 mt-2">
        Manage your account, organization, and platform preferences
      </p>
    </div>

    <!-- Tab Navigation -->
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" id="tab-navigation">
        <button
          class="tab-button active border-b-2 border-blue-600 py-4 px-1 text-sm font-medium text-blue-600"
          data-tab="profile"
        >
          Profile
        </button>
        <button
          class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
          data-tab="organization"
        >
          Organization
        </button>
        <button
          class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
          data-tab="account"
        >
          Account
        </button>
        <button
          class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
          data-tab="security"
        >
          Security
        </button>
        <button
          class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
          data-tab="notifications"
        >
          Notifications
        </button>
        <button
          class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300"
          data-tab="billing"
        >
          Billing
        </button>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="mt-8">
      <!-- Profile Tab -->
      <div id="profile-tab" class="tab-content">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-sm border p-6 space-y-6">
              <div>
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                  Personal Information
                </h2>
                <p class="text-sm text-gray-600 mb-6">
                  Update your personal details and contact information.
                </p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label
                    for="first-name"
                    class="block text-sm font-medium text-gray-700 mb-2"
                    >First Name</label
                  >
                  <input
                    type="text"
                    id="first-name"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Enter your first name"
                  />
                </div>
                <div>
                  <label
                    for="last-name"
                    class="block text-sm font-medium text-gray-700 mb-2"
                    >Last Name</label
                  >
                  <input
                    type="text"
                    id="last-name"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Enter your last name"
                  />
                </div>
              </div>

              <div>
                <label
                  for="profile_email"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Email Address</label
                >
                <input
                  type="email"
                  id="profile_email"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Enter your email address"
                />
              </div>

              <div>
                <label
                  for="profile_phone"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="profile_phone"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="(555) 123-4567"
                />
              </div>

              <div>
                <label
                  for="title"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Professional Title</label
                >
                <input
                  type="text"
                  id="title"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="e.g., Chief Executive Officer, Medical Director"
                />
              </div>

              <div class="pt-4 border-t">
                <button
                  class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
                >
                  Save Changes
                </button>
              </div>
            </div>
          </div>

          <div>
            <div class="bg-white rounded-lg shadow-sm border p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">
                Profile Photo
              </h3>
              <div class="text-center">
                <div
                  class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center"
                >
                  <svg
                    class="w-12 h-12 text-gray-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <button
                  class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors duration-200"
                >
                  Upload Photo
                </button>
                <p class="text-xs text-gray-500 mt-2">JPG, PNG up to 5MB</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Organization Tab -->
      <div id="organization-tab" class="tab-content hidden">
        <div class="space-y-8">
          <!-- Organization Overview -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex justify-between items-start mb-6">
              <div>
                <h2 class="text-xl font-semibold text-gray-900">
                  Organization Overview
                </h2>
                <p class="text-sm text-gray-600 mt-1">
                  Manage your organization details and facility network
                </p>
              </div>
              <div class="text-right">
                <div
                  class="text-2xl font-bold text-blue-600"
                  id="facility-count"
                >
                  0
                </div>
                <div class="text-sm text-gray-500">Total Facilities</div>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="legal_name"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Legal Entity Name</label
                >
                <input
                  type="text"
                  id="legal_name"
                  name="legal_name"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Enter legal entity name"
                />
              </div>
              <div>
                <label
                  for="tax_id"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Tax ID (EIN)</label
                >
                <input
                  type="text"
                  id="tax_id"
                  name="tax_id"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="XX-XXXXXXX"
                />
              </div>
            </div>

            <div class="mt-6">
              <label
                for="organization-type"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Organization Type</label
              >
              <select
                id="organization-type"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select organization type</option>
                <option value="corporation">Corporation</option>
                <option value="llc">LLC</option>
                <option value="partnership">Partnership</option>
                <option value="sole-proprietorship">Sole Proprietorship</option>
                <option value="non-profit">Non-Profit</option>
              </select>
            </div>

            <div class="mt-6">
              <label
                for="corporate-address"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Corporate Address</label
              >
              <textarea
                id="corporate-address"
                rows="3"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter complete corporate address"></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
              <div>
                <label
                  for="organization-phone"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="organization-phone"
                  name="phone"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="(555) 123-4567"
                />
              </div>
              <div>
                <label
                  for="organization-email"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Email Address</label
                >
                <input
                  type="email"
                  id="organization-email"
                  name="email"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="organization@example.com"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
              <div>
                <label
                  for="signer_name"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Authorized Signer Name</label
                >
                <input
                  type="text"
                  id="signer_name"
                  name="signer_name"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Full name of authorized signer"
                />
              </div>
              <div>
                <label
                  for="signer_title"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Signer Title</label
                >
                <input
                  type="text"
                  id="signer_title"
                  name="signer_title"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="e.g., CEO, President, Managing Partner"
                />
              </div>
            </div>

            <div class="mt-6 pt-6 border-t flex gap-4">
              <button
                id="sync-settings"
                type="button"
                class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
              >
                Sync with Settings
              </button>
              <button
                id="save-org-info"
                type="button"
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
              >
                Save Progress
              </button>
            </div>
          </div>

          <!-- Facility Management -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex justify-between items-center mb-6">
              <h3 class="text-lg font-semibold text-gray-900">
                Facility Management
              </h3>
              <div class="space-x-3">
                <button
                  class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors duration-200"
                >
                  Export CSV
                </button>
                <button
                  onclick="window.location.href='/dashboard/contract/csv-upload'"
                  class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200"
                >
                  Bulk Upload
                </button>
              </div>
            </div>

            <div id="facility-list" class="space-y-4">
              <!-- Facility list will be populated by JavaScript -->
              <div class="text-center text-gray-500 py-8">
                <div
                  class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto"
                >
                </div>
                <p class="mt-2">Loading facilities...</p>
              </div>
            </div>

            <div class="mt-6 pt-6 border-t">
              <button
                onclick="window.location.href='/dashboard/onboarding/facilities'"
                class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200"
              >
                Add New Facility
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Account Tab -->
      <div id="account-tab" class="tab-content hidden">
        <div class="space-y-8">
          <!-- Network Onboarding Progress -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">
              Network Onboarding Progress
            </h2>

            <div class="space-y-6">
              <div class="flex items-center">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    ✓
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Account Created
                    </div>
                    <div class="text-sm text-gray-500">
                      Your USRad account has been created
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="profile-setup-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    2
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Profile Setup
                    </div>
                    <div class="text-sm text-gray-500">
                      Complete your personal and organization information
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="facilities-added-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    3
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Facilities Added
                    </div>
                    <div class="text-sm text-gray-500">
                      Add your imaging center locations to the network
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="psa-signed-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    4
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      PSA Signed
                    </div>
                    <div class="text-sm text-gray-500">
                      Complete digital signing of Provider Service Agreement
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="credentialing-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    5
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Credentialing Completed
                    </div>
                    <div class="text-sm text-gray-500">
                      Verify credentials and insurance requirements
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="banking-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    6
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Banking Information
                    </div>
                    <div class="text-sm text-gray-500">
                      Set up payment processing and direct deposit
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center" id="launch-ready-step">
                <div class="flex items-center">
                  <div
                    class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold"
                  >
                    7
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      Launch Ready
                    </div>
                    <div class="text-sm text-gray-500">
                      Begin receiving patient appointments through USRad
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Overall Progress Bar -->
            <div class="mt-8">
              <div class="flex justify-between text-sm text-gray-600 mb-2">
                <span>Overall Progress</span>
                <span id="progress-percentage">14%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div
                  class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                  id="progress-bar"
                  style="width: 14%"
                >
                </div>
              </div>
            </div>
          </div>

          <!-- Account Information -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              Account Information
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <div class="text-sm text-gray-500">Account Type</div>
                <div
                  class="text-lg font-medium text-gray-900"
                  id="account-type"
                >
                  Imaging Center Provider
                </div>
              </div>
              <div>
                <div class="text-sm text-gray-500">Network Status</div>
                <div
                  class="text-lg font-medium text-green-600"
                  id="network-status"
                >
                  Active
                </div>
              </div>
              <div>
                <div class="text-sm text-gray-500">Member Since</div>
                <div
                  class="text-lg font-medium text-gray-900"
                  id="member-since"
                >
                  Loading...
                </div>
              </div>
              <div>
                <div class="text-sm text-gray-500">Network Access Level</div>
                <div
                  class="text-lg font-medium text-blue-600"
                  id="access-level"
                >
                  Standard
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Security Tab -->
      <div id="security-tab" class="tab-content hidden">
        <div class="space-y-8">
          <!-- Password Security -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">
              Password & Authentication
            </h2>

            <div class="space-y-6">
              <div>
                <label
                  for="current-password"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Current Password</label
                >
                <input
                  type="password"
                  id="current-password"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Enter current password"
                />
              </div>

              <div>
                <label
                  for="new-password"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >New Password</label
                >
                <input
                  type="password"
                  id="new-password"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Enter new password"
                />
              </div>

              <div>
                <label
                  for="confirm-password"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Confirm New Password</label
                >
                <input
                  type="password"
                  id="confirm-password"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Confirm new password"
                />
              </div>

              <button
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
              >
                Update Password
              </button>
            </div>
          </div>

          <!-- Session Management -->
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              Active Sessions
            </h3>
            <p class="text-sm text-gray-600 mb-6">
              Manage your active login sessions across devices
            </p>

            <div class="space-y-4">
              <div
                class="flex justify-between items-center p-4 bg-gray-50 rounded-lg"
              >
                <div>
                  <div class="text-sm font-medium text-gray-900">
                    Current Session
                  </div>
                  <div class="text-sm text-gray-500">
                    Chrome on Windows • Current device
                  </div>
                </div>
                <span class="text-sm text-green-600 font-medium">Active</span>
              </div>
            </div>

            <button
              class="mt-4 bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200"
            >
              Sign Out All Other Sessions
            </button>
          </div>
        </div>
      </div>

      <!-- Notifications Tab -->
      <div id="notifications-tab" class="tab-content hidden">
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">
            Notification Preferences
          </h2>

          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-4">
                Email Notifications
              </h3>
              <div class="space-y-4">
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                    checked
                  />
                  <span class="ml-3 text-sm text-gray-700"
                    >New appointment notifications</span
                  >
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                    checked
                  />
                  <span class="ml-3 text-sm text-gray-700"
                    >Payment confirmations</span
                  >
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                  />
                  <span class="ml-3 text-sm text-gray-700"
                    >Marketing communications</span
                  >
                </label>
              </div>
            </div>

            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-4">
                SMS Notifications
              </h3>
              <div class="space-y-4">
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                    checked
                  />
                  <span class="ml-3 text-sm text-gray-700"
                    >Appointment reminders</span
                  >
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                  />
                  <span class="ml-3 text-sm text-gray-700"
                    >Urgent notifications</span
                  >
                </label>
              </div>
            </div>

            <button
              class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
            >
              Save Preferences
