  <script type="module">
    document.addEventListener("DOMContentLoaded", async function () {
      console.log("🚀 Settings page initializing...");

      // Initialize tabs
      initializeTabs();

      // Wait for USRadUser to be available
      let attempts = 0;
      while ((!window.USRadUser || !window.USRadUser.user) && attempts < 50) {
        console.log("⏳ Waiting for USRadUser...", attempts);
        await new Promise((resolve) => setTimeout(resolve, 100));
        attempts++;
      }

      if (!window.USRadUser || !window.USRadUser.user) {
        console.error("❌ USRadUser not available after 5 seconds");
        return;
      }

      const userId = window.USRadUser.user?.id;
      const supabase = window.USRadUser.supabase;

      if (!userId) {
        console.error("❌ No user ID found");
        return;
      }

      console.log("✅ User ID:", userId);
      console.log("✅ Supabase client available:", !!supabase);

      // Load all data
      await loadUserData();
      await loadOrganizationData();
      updateProgressTracking();
    });

    function initializeTabs() {
      const tabButtons = document.querySelectorAll(".tab-button");
      const tabContents = document.querySelectorAll(".tab-content");

      tabButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const targetTab = button.dataset.tab;

          // Update button states
          tabButtons.forEach((btn) => {
            btn.classList.remove("active", "border-blue-600", "text-blue-600");
            btn.classList.add("border-transparent", "text-gray-500");
          });

          button.classList.add("active", "border-blue-600", "text-blue-600");
          button.classList.remove("border-transparent", "text-gray-500");

          // Update content visibility
          tabContents.forEach((content) => {
            content.classList.add("hidden");
          });

          document
            .getElementById(`${targetTab}-tab`)
            .classList.remove("hidden");
        });
      });
    }

    async function loadUserData() {
      try {
        const user = window.USRadUser.user;
        const supabase = window.USRadUser.supabase;

        if (!user || !user.id) {
          console.error("❌ No user available for loadUserData");
          return;
        }

        console.log("📋 Loading user data for:", user.id);

        // Populate profile fields from auth metadata
        document.getElementById("first-name").value =
          user.user_metadata?.first_name || "";
        document.getElementById("last-name").value =
          user.user_metadata?.last_name || "";
        document.getElementById("profile_email").value = user.email || "";
        document.getElementById("profile_phone").value =
          user.user_metadata?.phone || "";
        document.getElementById("title").value =
          user.user_metadata?.title || "";

        // Update account information
        document.getElementById("member-since").textContent = new Date(
          user.created_at
        ).toLocaleDateString();

        // Load user profile data using proper query
        const { data: profile, error } = await supabase
          .from("user_profiles")
          .select("*")
          .eq("id", user.id)
          .single();

        if (error) {
          console.error("❌ Error loading user profile:", error);
        } else {
          console.log("✅ Loaded user profile:", profile);

          if (profile) {
            document.getElementById("progress-percentage").textContent =
              profile.onboarding_progress + "%";
            document.getElementById("progress-bar").style.width =
              profile.onboarding_progress + "%";
            document.getElementById("access-level").textContent =
              profile.network_access_level || "Standard";
          }
        }
      } catch (error) {
        console.error("❌ Error in loadUserData:", error);
      }
    }

    async function loadOrganizationData() {
      try {
        const user = window.USRadUser.user;
        const supabase = window.USRadUser.supabase;

        if (!user || !user.id) {
          console.error("❌ No user available for loadOrganizationData");
          return;
        }

        console.log("🏢 Loading organization data for:", user.id);

        // Load corporate entity using proper query
        const { data: corporateInfo, error: corpError } = await supabase
          .from("corporate_entities")
          .select("*")
          .eq("user_id", user.id)
          .single();

        if (corpError && corpError.code !== "PGRST116") {
          console.error("❌ Error loading corporate entity:", corpError);
        } else if (corporateInfo) {
          console.log("✅ Loaded corporate entity:", corporateInfo);

          document.getElementById("legal_name").value =
            corporateInfo.legal_name || "";
          document.getElementById("tax_id").value = corporateInfo.tax_id || "";
          document.getElementById("organization-type").value =
            corporateInfo.organization_type || "";
          document.getElementById("corporate-address").value =
            corporateInfo.corporate_address || "";
          document.getElementById("organization-phone").value =
            corporateInfo.phone || "";
          document.getElementById("organization-email").value =
            corporateInfo.email || "";
          document.getElementById("signer_name").value =
            corporateInfo.signer_name || "";
          document.getElementById("signer_title").value =
            corporateInfo.signer_title || "";
        }

        // Load facilities using proper query
        const { data: facilities, error: facilityError } = await supabase
          .from("user_facilities")
          .select("*")
          .eq("user_id", user.id)
          .order("is_primary", { ascending: false });

        if (facilityError) {
          console.error("❌ Error loading facilities:", facilityError);
        } else {
          console.log("✅ Loaded facilities:", facilities);
          updateFacilityCount(facilities?.length || 0);
          populateFacilityList(facilities || []);
        }
      } catch (error) {
        console.error("❌ Error in loadOrganizationData:", error);
      }
    }

    function updateFacilityCount(count) {
      document.getElementById("facility-count").textContent = count;
    }

    function populateFacilityList(facilities) {
      const container = document.getElementById("facility-list");

      if (facilities.length === 0) {
        container.innerHTML = `
          <div class="text-center text-gray-500 py-8">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0a2 2 0 002-2m-2 2H5m14 0v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5m12 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v12m14 0h2m-2 0h-5"></path>
            </svg>
            <p>No facilities configured</p>
            <p class="text-sm">Add your first imaging center to get started</p>
          </div>
        `;
        return;
      }

      container.innerHTML = facilities
        .map(
          (facility) => `
        <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
          <div class="flex-1">
            <div class="flex items-center">
              <h4 class="font-medium text-gray-900">${facility.facility_name}</h4>
              ${
                facility.is_primary
                  ? `
                <span class="ml-2 inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">Primary</span>
              `
                  : ""
              }
            </div>
            <div class="text-sm text-gray-600 mt-1">
              ${facility.street_address}, ${facility.city}, ${facility.state} ${facility.zip_code}
            </div>
            ${
              facility.modalities
                ? `
              <div class="text-xs text-gray-500 mt-1">
                <strong>Modalities:</strong> ${facility.modalities}
              </div>
            `
                : ""
            }
          </div>
          <div class="text-right">
            ${
              facility.is_acr_verified
                ? `
              <span class="text-xs text-green-600 font-medium">ACR Verified</span>
            `
                : `
              <span class="text-xs text-gray-500">Manual Entry</span>
            `
            }
          </div>
        </div>
      `
        )
        .join("");
    }

    function updateProgressTracking() {
      // This would update based on actual user progress
      // For now, just showing the structure
      const steps = [
        { id: "profile-setup-step", completed: true },
        { id: "facilities-added-step", completed: false },
        { id: "psa-signed-step", completed: false },
        { id: "credentialing-step", completed: false },
        { id: "banking-step", completed: false },
        { id: "launch-ready-step", completed: false },
      ];

      steps.forEach((step, index) => {
        const stepElement = document.getElementById(step.id);
        const circle = stepElement.querySelector(".w-8.h-8");

        if (step.completed) {
          circle.className =
            "w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-sm font-bold";
          circle.textContent = "✓";
        } else {
          circle.className =
            "w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-bold";
          circle.textContent = index + 2;
        }
      });
    }

