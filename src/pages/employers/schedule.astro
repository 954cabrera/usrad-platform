---
// src/pages/employers/schedule.astro
import EmployerConsultationForm from "../../components/EmployerConsultationForm.astro";
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout>
  <Fragment slot="head">
    <title>Schedule Consultation | USRad for Employers</title>
    <meta
      name="description"
      content="Schedule a consultation to learn how USRad can provide cost-effective imaging benefits for your employees."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <div class="hero-badge">
          <span>‚úì Free Consultation</span>
        </div>
        <h1>Transform Your Employee Benefits</h1>
        <p class="hero-subtitle">
          Discover how USRad can reduce your imaging costs by up to 70% while
          providing better access to care for your employees
        </p>

        <!-- Benefits Preview -->
        <div class="benefits-preview">
          <div class="benefit-item">
            <div class="benefit-icon">üí∞</div>
            <span>Significant cost savings</span>
          </div>
          <div class="benefit-item">
            <div class="benefit-icon">üè•</div>
            <span>Nationwide network</span>
          </div>
          <div class="benefit-item">
            <div class="benefit-icon">‚ö°</div>
            <span>Fast implementation</span>
          </div>
        </div>
      </div>

      <div class="hero-image">
        <img
          src="/images/employer-consultation-hero.jpg"
          alt="Professional consultation meeting"
        />
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section class="form-section">
    <div class="form-container">
      <div class="form-intro">
        <h2>Schedule Your Consultation</h2>
        <p>
          Speak with our employer benefits specialist to learn how USRad can
          enhance your employee benefits package while reducing costs.
        </p>

        <div class="consultation-details">
          <div class="detail-item">
            <strong>Duration:</strong> 30 minutes
          </div>
          <div class="detail-item">
            <strong>Format:</strong> Video call or phone
          </div>
          <div class="detail-item">
            <strong>Cost:</strong> Completely free
          </div>
        </div>
      </div>

      <div class="form-wrapper">
        <EmployerConsultationForm />
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="trust-section">
    <div class="trust-container">
      <div class="trust-stats">
        <div class="stat-item">
          <div class="stat-number">500+</div>
          <div class="stat-label">Companies Served</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">70%</div>
          <div class="stat-label">Average Cost Reduction</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">24hrs</div>
          <div class="stat-label">Response Time</div>
        </div>
      </div>

      <div class="testimonial">
        <blockquote>
          "USRad helped us reduce our imaging costs by 65% while actually
          improving access for our employees. The implementation was seamless."
        </blockquote>
        <cite>‚Äî Sarah Chen, Benefits Director, TechCorp</cite>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Reset and Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Manrope", sans-serif;
    background: linear-gradient(135deg, #fcf9f0 0%, #f5f8fc 100%);
    color: #003087;
    line-height: 1.6;
  }

  /* Hero Section */
  .hero {
    padding: 80px 0;
    background: linear-gradient(135deg, #fcf9f0 0%, #fff 100%);
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    background: #e6f7ff;
    color: #003087;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: 800;
    color: #003087;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 20px;
    color: #666;
    margin-bottom: 30px;
    line-height: 1.5;
  }

  .benefits-preview {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 500;
  }

  .benefit-icon {
    font-size: 20px;
  }

  .hero-image {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 48, 135, 0.1);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Form Section */
  .form-section {
    padding: 80px 0;
    background: white;
  }

  .form-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .form-intro h2 {
    font-size: 36px;
    font-weight: 700;
    color: #003087;
    margin-bottom: 16px;
  }

  .form-intro p {
    font-size: 18px;
    color: #666;
    margin-bottom: 30px;
  }

  .consultation-details {
    background: #f8f9fa;
    padding: 24px;
    border-radius: 12px;
    border-left: 4px solid #cc9933;
  }

  .detail-item {
    margin-bottom: 12px;
    font-size: 16px;
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  .form-wrapper {
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 48, 135, 0.1);
    border: 1px solid rgba(0, 48, 135, 0.05);
  }

  /* Trust Section */
  .trust-section {
    padding: 60px 0;
    background: #f8f9fa;
  }

  .trust-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .trust-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-bottom: 50px;
    text-align: center;
  }

  .stat-number {
    font-size: 36px;
    font-weight: 800;
    color: #cc9933;
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 16px;
    color: #666;
    font-weight: 500;
  }

  .testimonial {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .testimonial blockquote {
    font-size: 20px;
    font-style: italic;
    color: #003087;
    margin-bottom: 16px;
    line-height: 1.5;
  }

  .testimonial cite {
    font-size: 16px;
    color: #666;
    font-weight: 500;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-container,
    .form-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .hero {
      padding: 60px 0;
    }

    .hero h1 {
      font-size: 36px;
    }

    .form-section {
      padding: 60px 0;
    }

    .form-intro h2 {
      font-size: 28px;
    }

    .form-wrapper {
      padding: 30px 20px;
    }

    .trust-stats {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 480px) {
    .hero-container,
    .form-container,
    .trust-container {
      padding: 0 15px;
    }

    .hero h1 {
      font-size: 32px;
    }

    .hero-subtitle {
      font-size: 18px;
    }
  }
</style>
