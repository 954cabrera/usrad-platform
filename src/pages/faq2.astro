import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Frequently Asked Questions | USRad Imaging">
  <!-- Add Manrope Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Main Content -->
  <div class="bg-gradient-to-b from-white to-gray-50 font-manrope">
    <!-- Premium Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-5">
      <div class="absolute inset-0 bg-pattern bg-repeat" style="background-image: url('/assets/images/pattern-bg.png');"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl mb-4">
          <span class="block text-navy-700">Frequently Asked Questions</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Answers to common questions about our imaging services and what to expect during your visit.
        </p>
      </div>

      <!-- Search Bar -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="relative">
          <input 
            type="text" 
            id="faq-search" 
            class="w-full border-2 border-gray-300 bg-white h-14 px-5 pr-16 rounded-lg text-lg focus:outline-none focus:border-navy-500 transition-colors" 
            placeholder="Search our FAQ..."
          >
          <button type="submit" class="absolute right-4 top-4">
            <svg class="text-navy-600 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>

      <!-- FAQ Tabs System - FIXED SPACING -->
      <div class="max-w-6xl mx-auto">
        <div class="mb-8 border-b border-gray-200">
          <nav class="-mb-px flex flex-wrap justify-center md:space-x-8 space-x-2" aria-label="Tabs">
            <button class="tab-button active whitespace-nowrap pb-4 px-3 border-b-2 font-medium text-lg border-gold-500 text-navy-700 mb-2 md:mb-0" data-target="general">
              General Questions
            </button>
            <button class="tab-button whitespace-nowrap pb-4 px-3 border-b-2 font-medium text-lg border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 mb-2 md:mb-0" data-target="procedures">
              Procedures
            </button>
            <button class="tab-button whitespace-nowrap pb-4 px-3 border-b-2 font-medium text-lg border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 mb-2 md:mb-0" data-target="insurance">
              Insurance & Billing
            </button>
            <button class="tab-button whitespace-nowrap pb-4 px-3 border-b-2 font-medium text-lg border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 mb-2 md:mb-0" data-target="preparation">
              Preparation
            </button>
          </nav>
        </div>

        <!-- General Questions Section -->
        <div id="general" class="tab-content active">
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <!-- FAQ Card 1 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">What makes USRad different from other imaging networks?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>USRad offers a trusted network of high-quality, affordable imaging centers. Our network features:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>State-of-the-art MRI and CT scanners at competitive rates</li>
                        <li>Standardized quality protocols across all network centers</li>
                        <li>Convenient appointment times to fit your schedule</li>
                        <li>Board-certified radiologists with subspecialty expertise</li>
                        <li>Same-day or next-day appointments available</li>
                        <li>Transparent pricing with no surprise bills</li>
                      </ul>
                      <button class="mt-4 video-trigger inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-navy-600 hover:bg-navy-700">
                        <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Watch video tour
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ Card 2 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">How quickly can I get an appointment?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>We prioritize your time and healthcare needs across our network:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Urgent care cases can often be accommodated the same day</li>
                        <li>Most routine appointments are available within 24-48 hours</li>
                        <li>Health screening packages are typically scheduled within one week</li>
                        <li>Convenient online booking through our patient portal</li>
                      </ul>
                      <p class="mt-3">Our preferred patient program offers priority scheduling for those who need it most.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ Card 3 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">How do you ensure patient privacy?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>We maintain the highest standards of privacy and data security:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>HIPAA-compliant secure electronic records system</li>
                        <li>Strict non-disclosure agreements with all staff</li>
                        <li>Secure direct communication channels with your physician</li>
                        <li>Private changing areas at all network facilities</li>
                        <li>Regular privacy and security training for all personnel</li>
                      </ul>
                      <p class="mt-3">We can arrange special accommodations for patients with specific privacy concerns.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ Card 4 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">Who will be interpreting my results?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>Your imaging studies are interpreted by our network of qualified radiologists:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Board-certified with subspecialty training</li>
                        <li>Faculty positions at respected medical institutions</li>
                        <li>Published authors of peer-reviewed research</li>
                        <li>Dedicated to specific body systems for specialized expertise</li>
                      </ul>
                      <div class="mt-4 flex items-center">
                        <img src="/assets/images/radiologist-avatar.jpg" alt="Dr. Emily Chen" class="h-12 w-12 rounded-full object-cover mr-4">
                        <div>
                          <p class="text-sm font-medium text-gray-900">Meet Our Medical Director</p>
                          <p class="text-sm text-gray-500">Dr. Emily Chen, Director of Radiology</p>
                        </div>
                      </div>
                      <button class="mt-4 video-trigger inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-navy-600 hover:bg-navy-700">
                        <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Meet our radiologists
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Procedures Section -->
        <div id="procedures" class="tab-content hidden">
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <!-- MRI FAQ -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">What can I expect from an MRI examination?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>Our network provides quality MRI services at affordable rates:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Advanced MRI technology with clear, detailed imaging</li>
                        <li>Many locations offer wider bore machines to reduce claustrophobia</li>
                        <li>Noise-reducing headphones available at most centers</li>
                        <li>Comfortable positioning and padding for your comfort</li>
                        <li>Patient-focused technologists who explain each step</li>
                      </ul>
                      <div class="mt-4">
                        <button class="procedure-details-toggle text-navy-600 hover:text-navy-800 font-medium flex items-center" data-target="mri-details">
                          <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                          View procedure details
                        </button>
                        <div id="mri-details" class="procedure-details mt-3 hidden bg-blue-50 p-4 rounded-lg">
                          <h4 class="font-semibold text-navy-800">MRI Procedure at USRad Network Facilities</h4>
                          <ol class="list-decimal pl-5 mt-2 space-y-1 text-sm">
                            <li>Arrive at the facility and check in at the front desk</li>
                            <li>Change into a gown in a private changing area</li>
                            <li>Complete safety screening and discuss any concerns with the MRI technologist</li>
                            <li>The technologist will position you comfortably on the MRI table</li>
                            <li>The scan typically takes 20-45 minutes depending on the area being imaged</li>
                            <li>Our technologists focus on keeping you comfortable throughout the exam</li>
                            <li>Results are typically available within 24-48 hours</li>
                          </ol>
                          <p class="mt-2 text-sm text-navy-700">Our network centers maintain high standards for image quality and patient care.</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- CT Scan FAQ -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">What should I know about CT scanning?</h3>
                    <div class="mt-2 text-gray-600">
                      <p>USRad network offers advanced CT imaging at affordable rates:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Low-dose radiation protocols without compromising image quality</li>
                        <li>Quick scan times (typically under 5 minutes)</li>
                        <li>Cardiac and vascular CT options at select locations</li>
                        <li>Careful contrast protocols to minimize discomfort</li>
                        <li>Comfortable scanning environments</li>
                      </ul>
                      <div class="mt-4">
                        <button class="procedure-details-toggle text-navy-600 hover:text-navy-800 font-medium flex items-center" data-target="ct-details">
                          <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                          View procedure details
                        </button>
                        <div id="ct-details" class="procedure-details mt-3 hidden bg-blue-50 p-4 rounded-lg">
                          <h4 class="font-semibold text-navy-800">CT Scan Procedure at USRad Network Facilities</h4>
                          <ol class="list-decimal pl-5 mt-2 space-y-1 text-sm">
                            <li>Check in at the front desk</li>
                            <li>Review of procedure with the CT technologist</li>
                            <li>Change into a gown if needed</li>
                            <li>If contrast is needed, a technologist will insert an IV using careful technique</li>
                            <li>The CT scan itself typically takes 5-10 minutes</li>
                            <li>After your scan, you can resume normal activities</li>
                            <li>Results are typically available within 24-48 hours</li>
                          </ol>
                          <p class="mt-2 text-sm text-navy-700">Our network facilities use modern CT technology for accurate diagnosis with minimal radiation exposure.</p>
                        </div>
                      </div>
                      <button class="mt-4 video-trigger inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-navy-600 hover:bg-navy-700">
                        <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        View CT technology
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Ultrasound FAQ -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">Ultrasound & Specialized Imaging</h3>
                    <div class="mt-2 text-gray-600">
                      <p>Our ultrasound services include:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>High-definition ultrasound imaging</li>
                        <li>Advanced Doppler studies for vascular assessment</li>
                        <li>Elastography for tissue characterization at select locations</li>
                        <li>Comfortable examination tables</li>
                        <li>Gender reveal options for OB ultrasounds</li>
                        <li>Experienced, certified sonographers</li>
                      </ul>
                      <div class="mt-4">
                        <button class="procedure-details-toggle text-navy-600 hover:text-navy-800 font-medium flex items-center" data-target="ultrasound-details">
                          <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                          View procedure details
                        </button>
                        <div id="ultrasound-details" class="procedure-details mt-3 hidden bg-blue-50 p-4 rounded-lg">
                          <h4 class="font-semibold text-navy-800">Ultrasound Procedure at USRad Network Facilities</h4>
                          <ol class="list-decimal pl-5 mt-2 space-y-1 text-sm">
                            <li>Check in at the reception desk</li>
                            <li>Meet with your sonographer who will explain the procedure</li>
                            <li>Lie comfortably on the examination table</li>
                            <li>The sonographer will apply gel and use the ultrasound transducer to obtain images</li>
                            <li>Most ultrasounds take 15-30 minutes to complete</li>
                            <li>Results are typically available within 24-48 hours</li>
                          </ol>
                          <p class="mt-2 text-sm text-navy-700">For pregnancy ultrasounds, we offer gender reveal options upon request when medically appropriate.</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- X-Ray FAQ -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">X-Ray and Fluoroscopy Services</h3>
                    <div class="mt-2 text-gray-600">
                      <p>Our digital X-ray services offer:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Low radiation dose digital systems</li>
                        <li>Quick service with minimal wait times</li>
                        <li>Instant digital image processing</li>
                        <li>Specialized views and protocols as needed</li>
                        <li>Prompt results within 24 hours</li>
                      </ul>
                      <p class="mt-3">For fluoroscopy procedures, we offer:</p>
                      <ul class="list-disc pl-5 mt-2 space-y-1">
                        <li>Specialized contrast studies with comfort measures</li>
                        <li>Private changing areas</li>
                        <li>Radiologist supervision for all fluoroscopy procedures</li>
                      </ul>
                      <div class="mt-4">
                        <button class="procedure-details-toggle text-navy-600 hover:text-navy-800 font-medium flex items-center" data-target="xray-details">
                          <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                          View procedure details
                        </button>
                        <div id="xray-details" class="procedure-details mt-3 hidden bg-blue-50 p-4 rounded-lg">
                          <h4 class="font-semibold text-navy-800">X-Ray Procedure at USRad Network Facilities</h4>
                          <ol class="list-decimal pl-5 mt-2 space-y-1 text-sm">
                            <li>Quick check-in at the front desk</li>
                            <li>Change into a gown in a private changing area if needed</li>
                 <li>X-ray imaging takes only minutes to complete</li>
                            <li>Images are processed instantly and reviewed by a radiologist</li>
                            <li>Results are typically available within 24 hours</li>
                            <li>Digital copies of your imaging sent to your doctor</li>
                          </ol>
                          <p class="mt-2 text-sm text-navy-700">Our X-ray technology uses reduced radiation while producing clear diagnostic images.</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Insurance & Billing Section -->
        <div id="insurance" class="tab-content hidden">
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <!-- Insurance FAQ 1 -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-gold-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-xl font-bold text-gray-900">What insurance plans do you accept?</h3>
                    <div class="mt-2 text-gray-600">
