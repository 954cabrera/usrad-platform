      const searchInput = document.getElementById('faq-search');
      searchInput.addEventListener('input', () => {
        const searchTerm = searchInput.value.toLowerCase();
        const allQuestions = document.querySelectorAll('.bg-white.rounded-xl');
        
        allQuestions.forEach(question => {
          const questionText = question.querySelector('h3').textContent.toLowerCase();
          const answerText = question.querySelector('.text-gray-600').textContent.toLowerCase();
          
          if (questionText.includes(searchTerm) || answerText.includes(searchTerm)) {
            question.style.display = 'block';
          } else {
            question.style.display = 'none';
          }
        });
        
        // Show appropriate tab if search is active
        if (searchTerm.length > 0) {
          tabContents.forEach(content => content.classList.remove('hidden'));
        } else {
          // Reset to default view
          tabContents.forEach(content => content.classList.add('hidden'));
          document.getElementById('general').classList.remove('hidden');
          
          // Reset active tab styling
          tabButtons.forEach(btn => btn.classList.remove('active', 'border-gold-500', 'text-navy-700'));
          tabButtons.forEach(btn => btn.classList.add('border-transparent', 'text-gray-500'));
          tabButtons[0].classList.add('active', 'border-gold-500', 'text-navy-700');
          tabButtons[0].classList.remove('border-transparent', 'text-gray-500');
        }
      });
      
      // Video triggers
      const videoTriggers = document.querySelectorAll('.video-trigger');
      videoTriggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          alert('Video player would open here in the production version.');
        });
      });
    });
