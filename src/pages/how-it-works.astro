---
// pages/how-it-works.astro
import Layout from "../layouts/MainLayout.astro";
import AOSInit from "../components/AOSInit.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <AOSInit />

  <section
    class="relative w-full h-[500px] sm:h-[600px] md:h-[700px] overflow-hidden"
  >
    <!-- Background Image -->
    <img
      src="/images/how-it-works-hero-blank.webp"
      alt="Patient using tablet to book scan"
      class="absolute inset-0 w-full h-full object-cover z-0"
      loading="eager"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 z-10 pointer-events-none before:absolute before:inset-0 before:bg-gradient-to-r sm:before:bg-gradient-to-r before:from-[#000000e0] before:via-[#00000033] before:to-transparent before:blur-sm"
    >
    </div>

    <!-- Text Content -->
    <div
      class="relative z-20 flex items-start sm:items-center justify-center sm:justify-start h-full px-6 sm:px-12 pt-16 sm:pt-0 text-white text-left"
    >
      <div class="max-w-xl space-y-4" data-aos="fade-up" data-aos-delay="100">
        <h1 class="text-4xl sm:text-5xl font-bold">How It Works</h1>
        <p class="text-lg sm:text-xl leading-relaxed">
          No referrals. No insurance hurdles. <br />
          Just the scan you need — fast, transparent, and affordable.
        </p>
      </div>
    </div>
  </section>

  <!-- Patient-Centric Model Summary -->
  <section class="bg-white py-20 px-6 text-[#003087]">
    <div
      class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-12"
    >
      <!-- Text Content -->
      <div
        class="text-center md:text-left space-y-4 text-lg leading-relaxed px-4"
      >
        <p
          class="text-sm font-medium text-[#cc9933] uppercase tracking-wide mb-2"
        >
          Direct Access, No Complexity
        </p>
        <p>
          Whether you're uninsured, underinsured, or simply want clarity before
          committing to care — USRad makes medical imaging simple. We connect
          you directly to high-quality imaging centers across the country,
          eliminating the complexity of traditional healthcare.
        </p>
        <p>
          There are no surprise bills. You know your all-in price before you
          book. Every scan is read by a board-certified radiologist, and if
          needed, reviewed by a subspecialist — all within 24–48 hours.
        </p>
        <p>
          We believe imaging should be effortless, not a maze of referrals,
          authorizations, or unclear costs.
        </p>
      </div>

      <!-- Image -->
      <div class="w-full self-center px-4">
        <img
          src="/images/radiologist-virtual-consult.webp"
          alt="Radiologist virtually guiding a patient through scan options"
          class="rounded-2xl shadow-xl ring-1 ring-[#e6c378]/40 transition hover:shadow-2xl w-full h-auto object-cover"
          loading="lazy"
          data-aos="zoom-in"
          data-aos-delay="200"
        />
      </div>
    </div>
  </section>

  <!-- How It Works Sequential Grid -->
  <section class="relative bg-[#fefbf5] py-20 px-6 overflow-hidden">
    <div class="max-w-6xl mx-auto text-center text-[#003087]">
      <h2 class="text-3xl font-semibold mb-4">How It Works</h2>
      <p class="text-lg mb-12">
        From booking to results in four simple steps. No referrals. No
        confusion.
      </p>

      <div
        class="relative flex flex-col sm:flex-row items-center justify-between gap-10 sm:gap-4 px-4"
      >
        <!-- Connector line -->
        <div
          class="absolute top-[32px] left-0 right-0 h-px bg-[#e6c378] z-0 sm:block hidden"
        >
        </div>

        <!-- Step 1 -->
        <div
          class="relative z-10 flex flex-col items-center"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div
            class="bg-[#003087] rounded-full h-16 w-16 flex items-center justify-center mb-3"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="h-8 w-8 animate-pulse"
              xmlns="http://www.w3.org/2000/svg"
            >
              <circle cx="11" cy="11" r="7" stroke="#e6c378" stroke-width="2"
              ></circle>
              <line
                x1="15.5"
                y1="15.5"
                x2="20"
                y2="20"
                stroke="#e6c378"
                stroke-width="2"
                stroke-linecap="round"></line>
              <animateTransform
                attributeName="transform"
                type="scale"
                values="1;1.1;1"
                dur="2s"
                repeatCount="indefinite"
                additive="sum"></animateTransform>
            </svg>
          </div>
          <h3 class="font-semibold text-sm mb-1">Choose Your Scan</h3>
          <p class="text-xs">Select scan type & location</p>
        </div>

        <!-- Step 2 -->
        <div
          class="relative z-10 flex flex-col items-center"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <div
            class="bg-[#003087] rounded-full h-16 w-16 flex items-center justify-center mb-3"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="h-8 w-8 animate-pulse"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M12 2C8.5 2 6 4.8 6 8c0 4 6 12 6 12s6-8 6-12c0-3.2-2.5-6-6-6z"
                stroke="#e6c378"
                stroke-width="2"></path>
              <circle cx="12" cy="8" r="2" fill="#e6c378">
                <animate
                  attributeName="r"
                  values="2;2.6;2"
                  dur="2s"
                  repeatCount="indefinite"></animate>
              </circle>
            </svg>
          </div>
          <h3 class="font-semibold text-sm mb-1">Get Matched</h3>
          <p class="text-xs">Top-rated centers near you</p>
        </div>

        <!-- Step 3 -->
        <div
          class="relative z-10 flex flex-col items-center"
          data-aos="fade-up"
          data-aos-delay="500"
        >
          <div
            class="bg-[#003087] rounded-full h-16 w-16 flex items-center justify-center mb-3"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="h-8 w-8"
              xmlns="http://www.w3.org/2000/svg"
            >
              <rect
                x="3"
                y="6"
                width="18"
                height="12"
                rx="2"
                stroke="#e6c378"
                stroke-width="2"></rect>
              <line
                x1="3"
                y1="10"
                x2="21"
                y2="10"
                stroke="#e6c378"
                stroke-width="2"></line>
              <circle cx="8" cy="15" r="1" fill="#e6c378">
                <animate
                  attributeName="r"
                  values="1;1.8;1"
                  dur="2s"
                  repeatCount="indefinite"></animate>
              </circle>
            </svg>
          </div>
          <h3 class="font-semibold text-sm mb-1">Confirm & Pay</h3>
          <p class="text-xs">Transparent, All-In Pricing</p>
        </div>

        <!-- Step 4 -->
        <div
          class="relative z-10 flex flex-col items-center"
          data-aos="fade-up"
          data-aos-delay="700"
        >
          <div
            class="bg-[#003087] rounded-full h-16 w-16 flex items-center justify-center mb-3"
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="h-8 w-8"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M9 3a4 4 0 0 0 0 8 4 4 0 0 1 0 8"
                stroke="#e6c378"
                stroke-width="2"></path>
              <path
                d="M15 3a4 4 0 0 1 0 8 4 4 0 0 0 0 8"
                stroke="#e6c378"
                stroke-width="2"></path>
              <animateTransform
                attributeName="transform"
                type="scale"
                values="1;1.05;1"
                dur="2s"
                repeatCount="indefinite"></animateTransform>
            </svg>
          </div>
          <h3 class="font-semibold text-sm mb-1">Get Expert Care</h3>
          <p class="text-xs">Board-certified reads, fast results</p>
        </div>
      </div>
    </div>

    <!-- Walking Person Illustration (Right Side, Desktop Only) -->
    <div
      class="absolute right-6 bottom-6 hidden md:block z-10"
      data-aos="fade-left"
      data-aos-delay="800"
    >
      <img
        src="/images/illustrations/walking-person.webp"
        alt="A user navigating four imaging steps"
        class="max-h-64 opacity-90 animate-float"
        loading="lazy"
      />
    </div>
  </section>

  <!-- Why Patients Choose USRad -->
  <section class="bg-white py-20 px-6 text-[#003087]">
    <div class="max-w-6xl mx-auto text-center mb-12">
      <h2
        class="text-3xl font-semibold"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Why Patients Choose USRad
      </h2>
    </div>

    <div
      class="grid gap-10 sm:grid-cols-2 md:grid-cols-3 max-w-5xl mx-auto text-center"
    >
      <!-- Pillar 1 -->
      <div class="text-center">
        <img
          src="/images/icons/pricing.webp"
          alt="Flat rate pricing icon"
          class="mx-auto h-14 w-14 mb-3"
          loading="lazy"
        />
        <h3 class="text-lg font-semibold mb-2">
          Transparent Flat-Rate Pricing
        </h3>
        <p class="text-sm">
          All-inclusive rates. No hidden fees or separate radiologist bills.
        </p>
      </div>

      <!-- Pillar 2 -->
      <div data-aos="fade-up" data-aos-delay="200" class="space-y-3 px-4">
        <img
          src="/images/icons/radiologist.webp"
          alt="Radiologist Icon"
          class="mx-auto h-14 w-14 mb-3"
        />
        <h3 class="text-lg font-semibold">Board-Certified Interpretation</h3>
        <p class="text-sm">
          Every scan is reviewed by experienced radiologists, with subspecialist
          oversight when needed.
        </p>
      </div>

      <!-- Pillar 3 -->
      <div data-aos="fade-up" data-aos-delay="300" class="space-y-3 px-4">
        <img
          src="/images/icons/scheduling.webp"
          alt="Calendar Icon"
          class="mx-auto h-14 w-14 mb-3"
        />
        <h3 class="text-lg font-semibold">Priority Scheduling</h3>
        <p class="text-sm">2–4 day average appointment times — not weeks.</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-[#003087] py-20 px-6 text-white text-center">
    <div class="max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
      <h2 class="text-3xl font-semibold mb-4">Ready to Book Your Scan?</h2>
      <p class="text-lg mb-8">
        Choose a location, confirm your flat rate, and schedule — all in just
        minutes.
      </p>
      <a
        href="/locations"
        class="inline-block bg-white text-[#003087] font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-[#f7f7f7] transition"
      >
        See Available Locations →
      </a>
    </div>
  </section>
</Layout>
