---
import PartnerPageLayout from "../../layouts/PartnerPageLayout.astro";
import AOSInit from "../../components/AOSInit.astro";
import HeroImagingCenter from "../../components/imaging/HeroImagingCenter.astro";
import HeroSmartSplit from "../../components/partner/HeroSmartSplit.astro";
import HowItWorksTimeLine from "../../components/partner/HowItWorksTimeLine.astro";
import MarketOpportunity from "../../components/partner/MarketOpportunity.astro";
import IndependentInvitation from "../../components/partner/IndependentInvitation.astro";
import MfgTabs from "../../components/MfgTabs.astro";
import HealthcareCoverageCrisisGraph from "../../components/HealthcareCoverageCrisisGraph";
// Add Breadcrumb import
import Breadcrumb from "../../components/Breadcrumb.astro";

// Define breadcrumb paths for main partner page
const breadcrumbPaths = [
  {
    label: "Home",
    href: "/",
  },
  {
    label: "For Partners",
    href: "/partner",
    current: true,
  },
];
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap");

  body,
  html {
    font-family: "Manrope", sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Manrope", sans-serif;
    font-weight: 600;
  }

  p,
  a,
  button,
  input,
  select,
  textarea {
    font-family: "Manrope", sans-serif;
  }

  .abstract-medical-accent {
    position: absolute;
    width: 300px;
    height: 300px;
    background-image: url("/images/abstract-medical-visual.svg");
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.08;
    z-index: 0;
  }

  .relative-z-1 {
    position: relative;
    z-index: 1;
  }
</style>

<PartnerPageLayout>
  <AOSInit />

  <!-- Add Breadcrumb component before the hero section -->
  <!-- Breadcrumb -->
  <!--<Breadcrumb paths={breadcrumbPaths} /> -->

  <!-- Rest of your content remains the same -->

  <!-- Hero Section -->
  <HeroImagingCenter />

  <!-- Founder's Expertise Section -->
  <section
    class="py-16 bg-[#fcf9f0] text-gray-800 relative overflow-hidden"
    data-aos="fade-up"
    data-aos-delay="100"
  >
    <!-- Subtle pattern overlay -->
    <div
      class="absolute inset-0 bg-repeat opacity-[0.03]"
      style="background-image: url('/images/subtle-pattern.svg');"
    >
    </div>

    <!-- Decorative elements -->
    <div
      class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#e6c378] opacity-[0.03] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-[#003087] opacity-[0.03] blur-3xl"
    >
    </div>

    <div class="px-6 sm:px-8 lg:px-12">
      <div class="relative z-10 max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div
            class="relative flex justify-center items-center"
            data-aos="fade-right"
            data-aos-delay="200"
          >
            <img
              src="/images/michael.jpg"
              srcset="/images/michael-sm.jpg 400w, /images/michael.jpg 800w"
              sizes="(max-width: 768px) 85vw, 40vw"
              width="600"
              height="750"
              loading="lazy"
              alt="Michael Cabrera, Founder & CEO"
              class="w-[85%] h-auto rounded-xl shadow-lg relative z-10"
            />
            <div
              class="absolute -bottom-4 -left-4 w-24 h-24 rounded-full bg-[#e6c378] opacity-20"
            >
            </div>
          </div>

          <div class="space-y-5" data-aos="fade-left" data-aos-delay="300">
            <h2
              class="text-3xl font-semibold text-[#003087] flex items-center font-manrope"
            >
              <span class="w-2 h-10 bg-[#e6c378] rounded-full mr-3"></span>
              Pioneering Experience
            </h2>
            <p class="text-xl text-gray-700 leading-relaxed font-manrope">
              "We've not only built a previous network of 1,200+ imaging centers
              nationwide, but pioneered the first workers' compensation
              marketplace of its kind before anyone else did."
            </p>
            <p
              class="text-lg text-gray-700 leading-relaxed italic mt-3 font-manrope"
            >
              — Michael Cabrera, Founder & CEO
            </p>
            <div class="mt-2">
              <a
                href="/imaging-center/experience"
                class="text-[#003087] hover:text-[#cc9933] transition-colors font-medium flex items-center font-manrope"
              >
                Learn more about our experience
                <svg
                  class="ml-2 w-4 h-4"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Benefits Section -->
  <section class="py-16 bg-white text-[#003087] relative overflow-hidden">
    <!-- Background elements -->
    <div
      class="absolute top-20 left-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.05] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 right-20 w-72 h-72 rounded-full bg-[#003087] opacity-[0.05] blur-3xl"
    >
    </div>

    <div class="px-6 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-12" data-aos="fade-up" data-aos-delay="100">
          <h2
            class="text-4xl font-semibold text-[#003087] inline-flex items-center justify-center font-manrope"
          >
            <span class="w-2 h-10 bg-[#cc9933] rounded-full mr-3"></span>
            Network Benefits
          </h2>
          <p class="text-xl text-gray-700 mt-4 max-w-3xl mx-auto font-manrope">
            Join the network that's reimagining imaging access while creating
            sustainable value for participating centers.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Benefit 1: Incremental Revenue -->
          <div
            class="bg-[#f8f2e1] p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div
              class="w-16 h-16 bg-[#003087] rounded-full flex items-center justify-center mb-6 mx-auto"
            >
              <svg
                class="h-8 w-8 text-white"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-semibold text-[#003087] text-center mb-4 font-manrope"
            >
              Incremental Revenue
            </h3>
            <p class="text-[#003087] text-center font-manrope">
              Convert vacant appointment slots into immediate revenue with zero
              additional overhead costs.
            </p>
          </div>

          <!-- Benefit 2: Simplified Operations -->
          <div
            class="bg-[#f8f2e1] p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div
              class="w-16 h-16 bg-[#003087] rounded-full flex items-center justify-center mb-6 mx-auto"
            >
              <svg
                class="h-8 w-8 text-white"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3
              class="text-xl font-semibold text-[#003087] text-center mb-4 font-manrope"
            >
              Simplified Operations
            </h3>
            <p class="text-[#003087] text-center font-manrope">
              We handle patient acquisition, scheduling, and payment processing,
              allowing you to focus on clinical excellence.
            </p>
          </div>

          <!-- Benefit 3: Guaranteed Payment -->
          <div
            class="bg-[#f8f2e1] p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border-t-4 border-[#cc9933]"
            data-aos="fade-up"
            data-aos-delay="400"
          >
            <div
              class="w-16 h-16 bg-[#003087] rounded-full flex items-center justify-center mb-6 mx-auto"
            >
              <svg
                class="h-8 w-8 text-white"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-semibold text-[#003087] text-center mb-4 font-manrope"
            >
              Guaranteed Payment
            </h3>
            <p class="text-[#003087] text-center font-manrope">
              Receive payment within 15 days - no lengthy insurance claim
              cycles, denials, or payment delays.
            </p>
          </div>
        </div>

        <div class="text-center mt-12">
          <a
            href="/imaging-center/benefits"
            class="text-[#003087] hover:text-[#cc9933] transition-colors font-medium inline-flex items-center font-manrope"
          >
            View all network benefits
            <svg
              class="ml-2 w-4 h-4"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Streamlined Process Overview -->
  <section class="py-16 bg-[#f0f4f9] text-[#003087] relative overflow-hidden">
    <!-- Background elements -->
    <div
      class="absolute top-20 right-20 w-64 h-64 rounded-full bg-[#cc9933] opacity-[0.05] blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-72 h-72 rounded-full bg-white opacity-[0.1] blur-3xl"
    >
    </div>

    <div class="px-6 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16" data-aos="fade-up" data-aos-delay="100">
          <h2
            class="text-4xl font-semibold text-[#003087] inline-flex items-center justify-center font-manrope"
          >
            <span class="w-2 h-10 bg-[#cc9933] rounded-full mr-3"></span>
            Simple Implementation
          </h2>
          <p class="text-xl text-gray-700 mt-4 max-w-3xl mx-auto font-manrope">
            Our streamlined onboarding process gets you up and running quickly
            with minimal disruption.
          </p>
          <div
            class="mt-6 flex justify-center items-center space-x-4 text-sm text-gray-600"
          >
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
              <span>Average: 2-3 weeks</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-[#cc9933] rounded-full mr-2"></div>
              <span>Zero setup costs</span>
            </div>
          </div>
        </div>

        <!-- Enhanced Timeline with Animations -->
        <div class="relative" data-aos="fade-up" data-aos-delay="200">
          <!-- Animated Progress Line -->
          <div
            class="absolute top-20 left-0 right-0 h-1 bg-gray-200 hidden lg:block rounded-full overflow-hidden"
          >
            <div
              class="h-full bg-gradient-to-r from-[#cc9933] to-[#003087] rounded-full transition-all duration-2000 ease-out"
              id="progressLine"
              style="width: 0%"
            >
            </div>
          </div>

          <!-- Mobile Vertical Line -->
          <div
            class="absolute left-6 top-0 bottom-0 w-1 bg-gray-200 lg:hidden rounded-full overflow-hidden"
          >
            <div
              class="w-full bg-gradient-to-b from-[#cc9933] to-[#003087] rounded-full transition-all duration-2000 ease-out"
              id="progressLineMobile"
              style="height: 0%"
            >
            </div>
          </div>

          <!-- Enhanced Step Cards -->
          <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-6">
            <!-- Step 1: Eligibility Review -->
            <div
              class="flex flex-col items-center text-center lg:items-center"
              data-aos="zoom-in"
              data-aos-delay="300"
            >
              <div class="relative mb-6">
                <!-- Main Icon Container -->
                <div
                  class="w-20 h-20 bg-gradient-to-br from-[#003087] to-[#0052cc] rounded-2xl flex items-center justify-center relative z-10 shadow-lg transform transition-all duration-300 hover:scale-110 hover:rotate-3"
                >
                  <!-- Clipboard Check Icon -->
                  <svg
                    class="w-10 h-10 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                    ></path>
                  </svg>
                </div>
                <!-- Step Number Badge -->
                <div
                  class="absolute -top-2 -right-2 w-8 h-8 bg-[#cc9933] text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg z-20"
                >
                  1
                </div>
                <!-- Floating Indicator -->
                <div
                  class="absolute -bottom-2 -left-2 w-6 h-6 bg-green-500 rounded-full animate-pulse"
                >
                </div>
              </div>

              <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#cc9933] hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 lg:ml-6"
              >
                <h3
                  class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
                >
                  Eligibility Review
                </h3>
                <p
                  class="text-gray-600 font-manrope text-sm leading-relaxed mb-4"
                >
                  Quick but thorough evaluation of your center's qualifications
                  and readiness for our network.
                </p>
                <div
                  class="flex items-center text-xs text-green-600 font-semibold"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    ></path>
                  </svg>
                  Review process typically takes 2-3 business days
                </div>
              </div>
            </div>

            <!-- Step 2: Onboarding -->
            <div
              class="flex flex-col items-center text-center lg:items-center"
              data-aos="zoom-in"
              data-aos-delay="400"
            >
              <div class="relative mb-6">
                <div
                  class="w-20 h-20 bg-gradient-to-br from-[#cc9933] to-[#e6c378] rounded-2xl flex items-center justify-center relative z-10 shadow-lg transform transition-all duration-300 hover:scale-110 hover:rotate-3"
                >
                  <!-- Handshake Icon -->
                  <svg
                    class="w-10 h-10 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"
                    ></path>
                  </svg>
                </div>
                <div
                  class="absolute -top-2 -right-2 w-8 h-8 bg-[#003087] text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg z-20"
                >
                  2
                </div>
                <div
                  class="absolute -bottom-2 -left-2 w-6 h-6 bg-blue-500 rounded-full animate-pulse"
                >
                </div>
              </div>

              <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#003087] hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 lg:ml-6"
              >
                <h3
                  class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
                >
                  Onboarding
                </h3>
                <p
                  class="text-gray-600 font-manrope text-sm leading-relaxed mb-4"
                >
                  Dedicated support specialist guides you through paperwork,
                  contracts, and initial setup process.
                </p>
                <div
                  class="flex items-center text-xs text-blue-600 font-semibold"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
                    ></path>
                  </svg>
                  One-on-one guidance throughout
                </div>
              </div>
            </div>

            <!-- Step 3: Integration -->
            <div
              class="flex flex-col items-center text-center lg:items-center"
              data-aos="zoom-in"
              data-aos-delay="500"
            >
              <div class="relative mb-6">
                <div
                  class="w-20 h-20 bg-gradient-to-br from-[#003087] to-[#0052cc] rounded-2xl flex items-center justify-center relative z-10 shadow-lg transform transition-all duration-300 hover:scale-110 hover:rotate-3"
                >
                  <!-- Computer/Integration Icon -->
                  <svg
                    class="w-10 h-10 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div
                  class="absolute -top-2 -right-2 w-8 h-8 bg-[#cc9933] text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg z-20"
                >
                  3
                </div>
                <div
                  class="absolute -bottom-2 -left-2 w-6 h-6 bg-purple-500 rounded-full animate-pulse"
                >
                </div>
              </div>

              <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#cc9933] hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 lg:ml-6"
              >
                <h3
                  class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
                >
                  Integration
                </h3>
                <p
                  class="text-gray-600 font-manrope text-sm leading-relaxed mb-4"
                >
                  Simple connection to our scheduling platform and patient
                  management system. No complex IT work required.
                </p>
                <div
                  class="flex items-center text-xs text-purple-600 font-semibold"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.381z"
                    ></path>
                  </svg>
                  Fast & simple setup
                </div>
              </div>
            </div>

            <!-- Step 4: Launch -->
            <div
              class="flex flex-col items-center text-center lg:items-center"
              data-aos="zoom-in"
              data-aos-delay="600"
            >
              <div class="relative mb-6">
                <div
                  class="w-20 h-20 bg-gradient-to-br from-[#cc9933] to-[#e6c378] rounded-2xl flex items-center justify-center relative z-10 shadow-lg transform transition-all duration-300 hover:scale-110 hover:rotate-3"
                >
                  <!-- Rocket Launch Icon -->
                  <svg
                    class="w-10 h-10 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <div
                  class="absolute -top-2 -right-2 w-8 h-8 bg-[#003087] text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg z-20"
                >
                  4
                </div>
                <div
                  class="absolute -bottom-2 -left-2 w-6 h-6 bg-green-500 rounded-full animate-pulse"
                >
                </div>
              </div>

              <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#003087] hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 lg:ml-6"
              >
                <h3
                  class="text-xl font-semibold text-[#003087] mb-3 font-manrope"
                >
                  Launch & Earn
                </h3>
                <p
                  class="text-gray-600 font-manrope text-sm leading-relaxed mb-4"
                >
                  Begin receiving patients and generating incremental revenue.
                  Full support and monitoring included.
                </p>
                <div
                  class="flex items-center text-xs text-green-600 font-semibold"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"
                    ></path>
                  </svg>
                  Start earning immediately
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Timeline Summary -->
        <div class="mt-16 text-center" data-aos="fade-up" data-aos-delay="700">
          <div
            class="bg-gradient-to-r from-[#003087] to-[#0052cc] rounded-2xl p-8 text-white shadow-xl"
          >
