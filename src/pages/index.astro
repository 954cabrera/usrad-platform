---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import AOSInit from "../components/AOSInit.astro";
import SmartMatch from "../components/SmartMatch.astro";
import PromiseBanner from "../components/PromiseBanner.astro";
import WhyItCostsLess from "../components/WhyItCostsLess.astro";
import OurModel from "../components/OurModel.astro";
import FAQHome from "../components/FAQHome.astro";
import News from "../components/News.astro";
import FadeIn from "../components/FadeIn.astro";
---

<MainLayout>
  <slot slot="title">Home | USRad</slot>
  <AOSInit />

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-bg"></div>

    <div class="hero-content">
      <h1>
        <span>Need an MRI or CT?</span><br />
        <span>We Make It Simple.</span>
      </h1>

      <p>
        Skip the confusion. Get matched instantly to trusted imaging centers —
        with upfront pricing and no referral required.
      </p>
      <p>It’s fast, clear, and built for patients like you.</p>

      <div class="smartmatch-badge">
        <span>
          Powered by <span class="smartmatch-pulse"
            ><em>SmartMatch<sup>™</sup></em></span
          >
        </span>
      </div>

      <div class="hero-buttons">
        <a href="/locations" class="btn-primary">Find Centers →</a>
        <a href="/about" class="btn-secondary">Learn More</a>
      </div>
    </div>
  </section>

  <FadeIn effect="fade" delay={0}>
    <section class="bg-white py-12 px-6">
      <SmartMatch />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={400}>
    <section class="bg-white py-12 px-6">
      <PromiseBanner />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={800}>
    <section class="bg-white py-12 px-6">
      <WhyItCostsLess />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={1200}>
    <section class="bg-white py-12 px-6">
      <OurModel />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={1600}>
    <section class="bg-white py-12 px-6">
      <FAQHome />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={2000}>
    <section class="bg-white py-12 px-6">
      <News />
    </section>
  </FadeIn>

  
  <Footer />
</MainLayout>

<style>
  .hero-section {
    position: relative;
    height: 700px;
    background-color: #0e1b2a;
    color: #e6c378;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url("/images/patient-smiling.jpg");
    background-size: cover;
    background-position: center;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(14, 27, 42, 0.5);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    padding: 2rem;
    text-align: right;
    max-width: 900px;
    margin-left: auto;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: bold;
    line-height: 1.3;
    letter-spacing: -0.5px;
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
  }

  .hero-content p {
    margin-top: 1rem;
    font-size: 1.25rem;
    color: #f1d8a1;
    max-width: 440px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
  }

  .smartmatch-badge {
    margin-top: 1.5rem;
    background-color: white;
    color: #0e1b2a;
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    animation: glowPulse 2.2s ease-in-out infinite;
    box-shadow: 0 0 8px 2px rgba(230, 195, 120, 0.3);
  }

  @keyframes glowPulse {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 0 8px 2px rgba(230, 195, 120, 0.3);
    }
    50% {
      transform: scale(1.04);
      box-shadow: 0 0 16px 4px rgba(230, 195, 120, 0.5);
    }
  }

  .hero-buttons {
    margin-top: 2.5rem;
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    background-color: #e6c378;
    color: #0e1b2a;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: bold;
    text-decoration: none;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid #e6c378;
    color: #f1d8a1;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: bold;
    text-decoration: none;
  }

  .btn-secondary:hover {
    background-color: rgba(241, 216, 161, 0.1);
    color: #ffffff;
    border-color: #f1d8a1;
  }

  @media (max-width: 768px) {
    .hero-content {
      align-items: flex-start;
      text-align: left;
      padding: 1.5rem;
    }

    .hero-content h1 {
      font-size: 2.25rem;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
