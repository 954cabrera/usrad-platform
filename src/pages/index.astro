---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import ChatbotToggle from "../components/ChatbotToggle.astro";
import FadeIn from "../components/FadeIn.astro";
import AOSInit from "../components/AOSInit.astro";
import HomeProblemSolution from "../components/HomeProblemSolution.astro";
import FAQHome from "../components/FAQHome.astro";
import News from "../components/News.astro";
import StickyPatientSubHeader from "../components/StickyPatientSubHeader.jsx";
import HeroPatientIntro from "../components/HeroPatientIntro.astro";
import FAQPreview from "../components/FAQPreview.astro";
import CoreBenefits from "../components/CoreBenefits.astro";
import PatientTestimonials from "../components/PatientTestimonials.astro";
import ClinicalTrustSection from "../components/ClinicalTrustSection.astro";
import TrustBadgesBar from "../components/TrustBadgesBar.astro";
import CallToAction from "../components/CallToAction.astro";
import PrimaryButton from "../components/PrimaryButton.astro";
import SecondaryButton from "../components/SecondaryButton.astro";
---

<MainLayout>
  <AOSInit />
  <StickyPatientSubHeader client:load />

  <!-- Hero Section -->
  <FadeIn effect="fade" delay={0}>
    <section class="bg-gradient-to-b from-[#fcf9f0] to-[#f8f0d8]">
      <HeroPatientIntro />
      <div class="bg-[#003087]/90 text-white py-3 text-center">
        <div class="max-w-6xl mx-auto px-4">
          <p class="text-sm sm:text-base font-medium">
            Direct access to top-tier imaging centers with transparent pricing ‚Äî
            typically 30‚Äì70% below hospital rates
          </p>
        </div>
      </div>
    </section>
  </FadeIn>

  <!-- Core Benefits -->
  <FadeIn effect="fade" delay={100}>
    <section class="bg-white pt-8 sm:pt-16 pb-12 sm:pb-20">
      <CoreBenefits />
    </section>
  </FadeIn>

  <!-- Trust Badges -->
  <FadeIn effect="zoom" delay={100}>
    <section class="bg-[#f0f4f9] py-14 sm:py-16">
      <TrustBadgesBar />
    </section>
  </FadeIn>

  <!-- How It Works (Redesigned Timeline) -->
  <FadeIn effect="slide-left" delay={100}>
    <section id="how-it-works" class="scroll-mt-32 bg-white pt-28 pb-28">
      <div class="max-w-7xl mx-auto px-6 sm:px-12 text-center">
        <h2 class="text-4xl font-extrabold text-[#003087] mb-4">
          How It Works
        </h2>
        <p class="text-lg text-[#003087] mb-10">
          From booking to results in four simple steps. No referrals. No
          confusion.
        </p>
        <div
          class="flex flex-col lg:flex-row items-center justify-between gap-10 relative"
        >
          <div
            class="absolute hidden lg:block top-1/2 left-0 w-full h-1 bg-[#e6c378] z-0"
          >
          </div>

          <div class="relative z-10 flex-1 text-center">
            <div
              class="w-14 h-14 mx-auto bg-[#003087] text-white rounded-full flex items-center justify-center"
            >
              üîç
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[#003087]">
              Choose Your Scan
            </h3>
            <p class="mt-2 text-sm text-[#003087]">
              Select scan type & location
            </p>
          </div>

          <div class="relative z-10 flex-1 text-center">
            <div
              class="w-14 h-14 mx-auto bg-[#003087] text-white rounded-full flex items-center justify-center"
            >
              üìç
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[#003087]">
              Get Matched
            </h3>
            <p class="mt-2 text-sm text-[#003087]">
              Top-rated centers near you
            </p>
          </div>

          <div class="relative z-10 flex-1 text-center">
            <div
              class="w-14 h-14 mx-auto bg-[#003087] text-white rounded-full flex items-center justify-center"
            >
              üí≥
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[#003087]">
              Confirm & Pay
            </h3>
            <p class="mt-2 text-sm text-[#003087]">
              Flat-rate. No surprise bills
            </p>
          </div>

          <div class="relative z-10 flex-1 text-center">
            <div
              class="w-14 h-14 mx-auto bg-[#003087] text-white rounded-full flex items-center justify-center"
            >
              üß†
            </div>
            <h3 class="mt-4 text-xl font-semibold text-[#003087]">
              Get Expert Care
            </h3>
            <p class="mt-2 text-sm text-[#003087]">
              Board-certified reads, fast results
            </p>
          </div>
        </div>
        <div class="mt-10">
          <a
            href="/book"
            class="inline-block bg-[#cc9933] text-[#003087] font-bold px-8 py-4 rounded-full shadow-md hover:bg-[#e6c378] transition-all hover:shadow-lg"
          >
            Find an Imaging Center
          </a>
        </div>
      </div>
    </section>
  </FadeIn>

  <!-- CTA for Managed Care Platform -->
  <FadeIn effect="fade" delay={100}>
    <section class="bg-[#fcf9f0] text-[#003087] py-20 sm:py-24">
      <div class="max-w-5xl mx-auto px-6 sm:px-12 text-center">
        <h2 class="text-3xl font-bold mb-4">
          A Managed Care Platform‚ÄîFocused Solely on Radiology
        </h2>
        <p class="text-lg mb-8">
          USRad operates like a managed care organization‚Äîbut exclusively for
          diagnostic imaging. We eliminate insurance complexity with flat-rate
          pricing, direct scheduling, and board-certified reads.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/managed-care"
            class="bg-[#e6c378] hover:bg-[#cc9933] text-white px-6 py-3 rounded-xl font-semibold"
          >
            Learn About the Model
          </a>
        </div>
      </div>
    </section>
  </FadeIn>

  <!-- Network Map -->
  <FadeIn effect="fade" delay={100}>
    <section class="bg-white dark:bg-[#0f172a] py-24">
      <div class="max-w-5xl mx-auto px-6 sm:px-12 text-center">
        <p
          class="text-base font-semibold uppercase tracking-wider text-[#cc9933] mb-2"
        >
          National Footprint
        </p>

        <div
          class="relative bg-[#fdfaf3] dark:bg-[#1e293b] border border-[#e6c378]/30 rounded-3xl p-8 shadow-2xl"
        >
          <!-- Transparent US Map -->
          <img
            src="/images/usa-transparent.svg"
            alt="US Map"
            class="w-full mx-auto max-w-3xl rounded-xl"
          />

          <!-- USRad Pins (Animated, Responsive, Tooltips, Dark Mode Friendly) -->
          <img
            src="/images/usrad-pin-dark.png"
            title="Florida"
            data-aos="zoom-in"
            data-aos-delay="100"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 77%; left: 77.5%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="Georgia"
            data-aos="zoom-in"
            data-aos-delay="150"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 62%; left: 72%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="South Carolina"
            data-aos="zoom-in"
            data-aos-delay="200"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 57%; left: 77%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="North Carolina"
            data-aos="zoom-in"
            data-aos-delay="250"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 49%; left: 79%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="New York"
            data-aos="zoom-in"
            data-aos-delay="300"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 21%; left: 81%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="New Jersey"
            data-aos="zoom-in"
            data-aos-delay="350"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 32%; left: 83%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="Pennsylvania"
            data-aos="zoom-in"
            data-aos-delay="350"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 30.5%; left: 78%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="Illinois"
            data-aos="zoom-in"
            data-aos-delay="400"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 35%; left: 62%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="Texas"
            data-aos="zoom-in"
            data-aos-delay="450"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 74%; left: 46%;"
          />
          <img
            src="/images/usrad-pin-dark.png"
            title="California"
            data-aos="zoom-in"
            data-aos-delay="500"
            class="absolute w-6 sm:w-7 md:w-8 h-auto animate-pulse"
            style="top: 45%; left: 13%;"
          />
        </div>

        <p class="text-[#003087] dark:text-white text-base mt-6">
          Our signal is growing. Strategic partnerships expanding nationwide.
        </p>

        <a
          href="/partner"
          class="mt-6 inline-block bg-[#003087] text-white px-6 py-3 rounded-xl shadow-lg hover:bg-[#002266] transition"
        >
          Join the USRad Imaging Network ‚Üí
        </a>
      </div>
    </section>
  </FadeIn>

  <!-- Clinical Trust -->
  <FadeIn effect="fade" delay={100}>
    <section class="bg-white py-16 sm:py-20">
      <ClinicalTrustSection />
    </section>
  </FadeIn>

  <!-- FAQ Preview -->
  <FadeIn effect="slide-right" delay={100}>
    <section class="bg-[#f9f9f9] py-16 sm:py-20">
      <FAQPreview />
    </section>
  </FadeIn>

  <!-- News -->
  <FadeIn effect="fade" delay={100}>
    <section class="bg-white py-16 sm:py-20">
      <div class="max-w-6xl mx-auto px-6 sm:px-12">
        <News />
      </div>
    </section>
  </FadeIn>

  <!-- CTA -->
  <FadeIn effect="fade" delay={100}>
    <CallToAction />
  </FadeIn>
</MainLayout>

<ChatbotToggle chatbotLabel="üí¨ Let's Talk" />
