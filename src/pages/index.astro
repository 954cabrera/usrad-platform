---
import Layout from "../layouts/MainLayout.astro";
import SmartMatch from "../components/SmartMatch.astro";
import PromiseBanner from "../components/PromiseBanner.astro";
import HowItWorks from "../components/HowItWorks.astro";
import WhyItCostsLess from "../components/WhyItCostsLess.astro";
import OurModel from "../components/OurModel.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import Contact from "../components/Contact.astro";
import FAQHome from "../components/FAQHome.astro";
import News from "../components/News.astro";
---

<Layout>
  <HeroSection />

  <section data-aos="fade-up">
    <SmartMatch />
  </section>

  <section data-aos="fade-up" data-aos-delay="100">
    <HowItWorks />
  </section>

  <section data-aos="fade-up" data-aos-delay="200">
    <OurModel />
  </section>

  <section data-aos="fade-up" data-aos-delay="300">
    <WhyItCostsLess />
  </section>

  <section data-aos="fade-up" data-aos-delay="400">
    <PromiseBanner />
  </section>

  <section data-aos="fade-up" data-aos-delay="400">
    <FAQHome />
  </section>

  <section data-aos="fade-up" data-aos-delay="400">
    <News />
  </section>

  {
    /*
  <section data-aos="fade-up" data-aos-delay="500">
    <Contact />
  </section>
  */
  }

  <Footer />
</Layout>

<style is:global>
  .contact-form {
    padding: 3rem 2rem;
    background-color: #f9fafb;
  }

  .contact-form form {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
