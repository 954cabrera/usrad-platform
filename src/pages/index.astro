---
import AOSInit from "../components/AOSInit.astro";
import Layout from "../layouts/MainLayout.astro";
import SmartMatch from "../components/SmartMatch.astro";
import PromiseBanner from "../components/PromiseBanner.astro";
// import HowItWorks from "../components/HowItWorks.astro";
import WhyItCostsLess from "../components/WhyItCostsLess.astro";
import OurModel from "../components/OurModel.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import Contact from "../components/Contact.astro";
import FAQHome from "../components/FAQHome.astro";
import News from "../components/News.astro";
import FadeIn from "../components/FadeIn.astro";
import MfgTabs from "../components/MfgTabs.astro";
---

<AOSInit />
<Layout>
  <HeroSection />

  <FadeIn effect="fade" delay={0}>
    <section class="bg-white py-12 px-6">
      <SmartMatch />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={600}>
    <section class="bg-white py-12 px-6">
      <MfgTabs />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={200}>
    <section class="bg-slate-50 py-12 px-6">
      <OurModel />
    </section>
  </FadeIn>

  <FadeIn effect="slide-right" delay={300}>
    <section class="bg-white py-12 px-6">
      <WhyItCostsLess />
    </section>
  </FadeIn>

  <FadeIn effect="zoom" delay={400}>
    <section class="bg-blue-50 py-12 px-6">
      <PromiseBanner />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={500}>
    <section class="bg-slate-50 py-12 px-6">
      <FAQHome />
    </section>
  </FadeIn>

  <FadeIn effect="fade" delay={600}>
    <section class="bg-white py-12 px-6">
      <News />
    </section>
  </FadeIn>

  <FadeIn effect="zoom" delay={700}>
    <section class="bg-slate-100 py-12 px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl font-semibold text-blue-900">
          Powered by a Nationwide Network
        </h2>
        <p class="mt-4 text-lg text-gray-700">
          Clarity is designed for patients â€” but it begins with exceptional
          providers.
        </p>
        <a
          href="/partner"
          class="inline-block mt-6 bg-blue-900 text-white px-6 py-3 rounded-full font-medium hover:bg-blue-700 transition"
        >
          Learn About Joining the Network
        </a>
      </div>
    </section>
  </FadeIn>

  <Footer />
</Layout>

<style is:global>
  .contact-form {
    padding: 3rem 2rem;
    background-color: #f9fafb;
  }

  .contact-form form {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .powered-section {
    background-color: #f3f4f6;
  }
</style>
