---
// No layout
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Login Gateway</title>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom right, #1e3c72, #2a5298);
        transition: opacity 0.3s ease-out;
      }

      body.fade-out {
        opacity: 0;
      }

      .card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        width: 100%;
        max-width: 400px;
        text-align: center;
      }

      .role-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.5rem;
      }

      .role-buttons button {
        position: relative;
        overflow: hidden;
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 6px;
        border: 1px solid #ccc;
        cursor: pointer;
        background-color: #f1f5f9;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.4s ease forwards;
      }

      .role-buttons button:nth-child(1) {
        animation-delay: 0.1s;
      }
      .role-buttons button:nth-child(2) {
        animation-delay: 0.2s;
      }
      .role-buttons button:nth-child(3) {
        animation-delay: 0.3s;
      }

      .role-buttons button:hover {
        transform: scale(1.03);
        transition: transform 0.2s ease-in-out;
      }

      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .ripple {
        position: absolute;
        border-radius: 50%;
        transform: scale(0);
        animation: ripple-animation 0.6s linear;
        background: rgba(255, 255, 255, 0.4);
        pointer-events: none;
      }

      @keyframes ripple-animation {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h2>Select Login Type</h2>
      <div class="role-buttons">
        <button data-role="patient">Patient</button>
        <button data-role="center">Imaging Center</button>
        <button data-role="referral">Referring Physician</button>
      </div>
    </div>

    <script>
      function handleClick(event) {
        const button = event.currentTarget;
        const role = button.getAttribute("data-role");

        // Ripple
        const ripple = document.createElement("span");
        const diameter = Math.max(button.clientWidth, button.clientHeight);
        const radius = diameter / 2;
        ripple.classList.add("ripple");
        ripple.style.width = ripple.style.height = `${diameter}px`;
        ripple.style.left = `${event.offsetX - radius}px`;
        ripple.style.top = `${event.offsetY - radius}px`;

        const oldRipple = button.querySelector(".ripple");
        if (oldRipple) oldRipple.remove();
        button.appendChild(ripple);

        // Fade-out + redirect
        document.body.classList.add("fade-out");
        setTimeout(() => {
          const pathMap = {
            patient: "/login/patientlogin",
            center: "/login/centerlogin",
            referral: "/login/referrallogin",
          };
          window.location.href = pathMap[role] || "/login";
        }, 300);
      }

      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("button[data-role]").forEach((button) => {
          button.addEventListener("click", handleClick);
        });
      });
    </script>
  </body>
</html>
