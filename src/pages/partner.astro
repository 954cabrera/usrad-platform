---
import Layout from "../layouts/PartnerLayout.astro";
import AOSInit from "../components/AOSInit.astro";
import HeroSmartSplit from "../components/partner/HeroSmartSplit.astro";
import HowItWorksVisualGrid from "../components/partner/HowItWorksVisualGrid.astro";
import MarketOpportunity from "../components/partner/MarketOpportunity.astro";
import IndependentInvitation from "../components/partner/IndependentInvitation.astro";
import PartnerForm from "../components/partner/PartnerForm.astro";
---

<Layout>
  <AOSInit />
  <HeroSmartSplit />

  <!-- Visitor Note -->
  <div
    class="bg-yellow-50 border border-yellow-300 text-yellow-800 text-sm rounded-md p-4 mb-6 max-w-3xl mx-auto mt-8"
    data-aos="fade-up"
    data-aos-delay="200"
  >
    <strong>Note:</strong> This page is for imaging centers interested in partnering
    with USRad. If you're a patient, <a
      href="/"
      class="underline text-blue-600 hover:text-blue-800">click here</a
    >.
  </div>

  <HowItWorksVisualGrid />
  <MarketOpportunity />
  <IndependentInvitation />
  <PartnerForm />
</Layout>
