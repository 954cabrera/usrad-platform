---
import PartnerPageLayout from "../../layouts/PartnerPageLayout.astro";
import AOSInit from "../../components/AOSInit.astro";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap");
</style>

<PartnerPageLayout
  title="Training Materials | Coming Soon | USRad"
  currentPage="Training Materials"
  hideTitle={false}
>
  <AOSInit />

  <!-- Coming Soon Content -->
  <section class="py-32 bg-white text-center">
    <div class="max-w-4xl mx-auto px-6">
      <div class="mb-10" data-aos="fade-up">
        <div
          class="w-24 h-24 bg-[#f8f2e1] rounded-full flex items-center justify-center mx-auto mb-8"
        >
          <svg
            class="h-12 w-12 text-[#cc9933]"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h2 class="text-4xl font-bold text-[#003087] mb-6 font-manrope">
          Coming Soon
        </h2>
        <p class="text-xl text-gray-700 mb-8 font-manrope">
          We're currently developing comprehensive training materials for our
          partners. These resources will be available in the near future.
        </p>
        <p class="text-lg text-gray-600 mb-12 font-manrope">
          In the meantime, please contact your Partner Success Manager for any
          training needs.
        </p>
        <a
          href="/partner/support"
          class="inline-block px-8 py-4 bg-[#003087] text-white font-bold rounded-full hover:bg-[#002266] transition-all duration-300 hover:shadow-xl border border-transparent hover:border-[#cc9933] font-manrope"
        >
          Return to Partner Support
        </a>
      </div>
    </div>
  </section>
</PartnerPageLayout>
