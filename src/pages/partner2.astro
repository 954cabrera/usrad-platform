---
import MainLayout from "../layouts/MainLayout.astro";
import AOSInit from "../components/AOSInit.astro";
---

<MainLayout>
  <AOSInit />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-b from-[#fcf9f0] to-[#f5e7c5] text-[#003087] py-24 px-6 sm:px-12 text-center"
    data-aos="fade-up"
  >
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Partner With USRad</h1>
    <p class="text-xl max-w-3xl mx-auto mb-8">
      Join a national network of credentialed imaging centers serving the
      fastest-growing self-pay diagnostic platform in the country.
    </p>
    <a
      href="/contact"
      class="bg-[#e6c378] hover:bg-[#cc9933] text-white px-6 py-3 rounded-xl font-semibold"
    >
      Schedule a Consultation
    </a>
  </section>

  <!-- Why Partner -->
  <section
    class="py-20 bg-white text-[#003087] px-6 sm:px-12"
    data-aos="fade-up"
  >
    <h2 class="text-3xl font-bold text-center mb-12">
      Why Join the USRad Network?
    </h2>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <div class="text-center" data-aos="zoom-in" data-aos-delay="100">
        <img
          src="/icons/partner/calendar-user.png"
          alt="Self-Pay Referrals"
          class="h-12 mx-auto mb-4"
        />
        <h3 class="font-semibold text-lg mb-2">Steady Self-Pay Referrals</h3>
        <p>
          Tap into a growing demand from patients paying out of pocket, without
          needing insurance approvals.
        </p>
      </div>
      <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
        <img
          src="/icons/partner/dollar-fast.png"
          alt="Rapid Reimbursement"
          class="h-12 mx-auto mb-4"
        />
        <h3 class="font-semibold text-lg mb-2">Rapid Reimbursement</h3>
        <p>
          Get paid quickly with our flat-rate, up-front billing model—no claims
          chasing or denials.
        </p>
      </div>
      <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
        <img
          src="/icons/partner/shield-star.png"
          alt="Premium Brand"
          class="h-12 mx-auto mb-4"
        />
        <h3 class="font-semibold text-lg mb-2">
          High-Quality Brand Association
        </h3>
        <p>
          Be featured on a nationally recognized platform with a premium look
          and patient-first mission.
        </p>
      </div>
    </div>
  </section>

  <!-- Partnership Process -->
  <section
    class="py-20 bg-[#fcf9f0] text-[#003087] px-6 sm:px-12"
    data-aos="fade-up"
  >
    <h2 class="text-3xl font-bold text-center mb-12">
      What the Process Looks Like
    </h2>
    <div class="grid md:grid-cols-4 gap-6 max-w-6xl mx-auto text-center">
      <div data-aos="fade-up" data-aos-delay="100">
        <img
          src="/icons/partner/step-1.png"
          alt="Step 1"
          class="h-10 mx-auto mb-2"
        />
        <h3 class="text-lg font-semibold mb-2">Step 1</h3>
        <p>Intro Call & Qualification</p>
      </div>
      <div data-aos="fade-up" data-aos-delay="200">
        <img
          src="/icons/partner/step-2.png"
          alt="Step 2"
          class="h-10 mx-auto mb-2"
        />
        <h3 class="text-lg font-semibold mb-2">Step 2</h3>
        <p>Credentialing & QA Review</p>
      </div>
      <div data-aos="fade-up" data-aos-delay="300">
        <img
          src="/icons/partner/step-3.png"
          alt="Step 3"
          class="h-10 mx-auto mb-2"
        />
        <h3 class="text-lg font-semibold mb-2">Step 3</h3>
        <p>Contract Execution</p>
      </div>
      <div data-aos="fade-up" data-aos-delay="400">
        <img
          src="/icons/partner/step-4.png"
          alt="Step 4"
          class="h-10 mx-auto mb-2"
        />
        <h3 class="text-lg font-semibold mb-2">Step 4</h3>
        <p>Live on USRad Platform</p>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section
    class="py-20 bg-white text-[#003087] px-6 sm:px-12 text-center"
    data-aos="fade-up"
  >
    <h2 class="text-3xl font-bold mb-6">What Our Partners Say</h2>
    <img
      src="/icons/testimonial.svg"
      alt="Testimonial"
      class="h-12 mx-auto mb-4"
    />
    <p class="max-w-3xl mx-auto mb-6">
      “Since joining USRad, we’ve seen our unused appointment slots fill up with
      self-pay patients. Their system is efficient, and the payments are
      consistent.”
    </p>
    <p class="font-semibold">— Director, Imaging Center in Texas</p>
  </section>

  <!-- CTA -->
  <section
    class="py-20 bg-[#003087] text-white px-6 sm:px-12 text-center"
    data-aos="fade-up"
  >
    <h2 class="text-3xl font-bold mb-4">
      Let’s Bring Affordable Imaging to Millions
    </h2>
    <p class="text-lg mb-8">
      Become part of the network that’s changing how diagnostics are delivered
      in America.
    </p>
    <a
      href="/contact"
      class="bg-[#e6c378] hover:bg-[#cc9933] text-white px-6 py-3 rounded-xl font-semibold"
    >
      Get Started
    </a>
  </section>
</MainLayout>
