---
// src/pages/patient-dashboard/appointments/index.astro
import PatientDashboardLayout from "../../../components/patient-dashboard/PatientDashboardLayout.astro";
import { validateAuthSession } from "../../../lib/auth";
import PatientAppointmentsSystem from "../components/PatientAppointmentsSystem";

// Validate authentication
const { session, user } = await validateAuthSession(Astro.request);

if (!session || !user) {
  return Astro.redirect("/login/patientlogin");
}
---

<PatientDashboardLayout title="My Appointments" user={user}>
  <PatientAppointmentsSystem client:load />
</PatientDashboardLayout>
