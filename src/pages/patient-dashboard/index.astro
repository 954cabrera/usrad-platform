---
// src/pages/patient-dashboard/index.astro
import PatientDashboardLayout from "../../components/patient-dashboard/PatientDashboardLayout.astro";
import { validateAuthSession } from "../../lib/auth";

// Validate authentication
const { session, user } = await validateAuthSession(Astro.request);

if (!session || !user) {
  return Astro.redirect("/login/patientlogin");
}
---

<PatientDashboardLayout title="Dashboard" user={user}>
  <!-- Welcome Hero Section -->
  <div
    class="usrad-card p-8 mb-8 usrad-gradient-navy text-white relative overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -translate-y-32 translate-x-32"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full translate-y-24 -translate-x-24"
    >
    </div>
    <div class="relative z-10">
      <h1
        class="text-4xl font-bold mb-3"
        style="font-family: 'Manrope', sans-serif;"
      >
        Welcome back, {user.firstName || "Patient"}! ðŸ‘‹
      </h1>
      <p
        class="text-blue-100 text-xl mb-6"
        style="font-family: 'Manrope', sans-serif;"
      >
        Manage your health journey with USRad
      </p>
      <div class="flex items-center space-x-8">
        <div class="flex items-center space-x-3">
          <div class="w-4 h-4 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-blue-100 font-medium"
            >Your next appointment is in 2 days</span
          >
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="usrad-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Next Appointment</p>
          <p class="text-2xl font-bold text-blue-600 mt-1">June 5</p>
          <p class="text-sm text-gray-500">Brain MRI</p>
        </div>
        <div
          class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="usrad-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Total Savings</p>
          <p class="text-2xl font-bold text-green-600 mt-1">$2,847</p>
          <p class="text-sm text-gray-500">vs. hospital pricing</p>
        </div>
        <div
          class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-green-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
            ></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="usrad-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Health Score</p>
          <p class="text-2xl font-bold text-yellow-600 mt-1">92/100</p>
          <p class="text-sm text-gray-500">Excellent</p>
        </div>
        <div
          class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-yellow-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
            ></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="usrad-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-600 text-sm font-medium">Completed Scans</p>
          <p class="text-2xl font-bold text-purple-600 mt-1">4</p>
          <p class="text-sm text-gray-500">This year</p>
        </div>
        <div
          class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-purple-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
    <!-- Upcoming Appointments -->
    <div class="xl:col-span-2 usrad-card p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-gray-900">Upcoming Appointments</h3>
        <a
          href="/patient-dashboard/appointments"
          class="text-blue-600 hover:text-blue-700 font-medium">View All</a
        >
      </div>
      <div class="space-y-4">
        <!-- Appointment 1 -->
        <div class="flex items-center p-4 bg-blue-50 rounded-lg">
          <div
            class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center text-xl"
          >
            ðŸ§ 
          </div>
          <div class="ml-4 flex-1">
            <h4 class="font-semibold text-gray-900">Brain MRI</h4>
            <p class="text-sm text-gray-600">June 5, 2025 at 2:30 PM</p>
            <p class="text-sm text-gray-500">
              Advanced Imaging Center of Davie
            </p>
          </div>
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold"
            >Confirmed</span
          >
        </div>

        <!-- Appointment 2 -->
        <div class="flex items-center p-4 bg-yellow-50 rounded-lg">
          <div
            class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center text-xl"
          >
            ðŸ¦µ
          </div>
          <div class="ml-4 flex-1">
            <h4 class="font-semibold text-gray-900">Knee MRI</h4>
            <p class="text-sm text-gray-600">June 12, 2025 at 10:00 AM</p>
            <p class="text-sm text-gray-500">Precision Imaging Coral Springs</p>
          </div>
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold"
            >Confirmed</span
          >
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="usrad-card p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <a
            href="/patient-dashboard/booking"
            class="w-full bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium text-center block"
          >
            Book New Imaging
          </a>
          <a
            href="/patient-dashboard/reports"
            class="w-full border border-gray-300 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors font-medium text-center block"
          >
            View Reports
          </a>
          <a
            href="/patient-dashboard/support"
            class="w-full border border-gray-300 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors font-medium text-center block"
          >
            Contact Support
          </a>
        </div>
      </div>

      <!-- Referral Progress -->
      <div class="usrad-card p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Referral Rewards
        </h3>
        <div class="text-center">
          <div class="text-3xl font-bold text-yellow-600 mb-2">2/5</div>
          <p class="text-gray-600 mb-4">Referrals completed</p>
          <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
            <div class="bg-yellow-500 h-2 rounded-full" style="width: 40%">
            </div>
          </div>
          <p class="text-sm text-gray-500 mb-4">
            3 more referrals to earn $100 credit!
          </p>
          <a
            href="/patient-dashboard/referrals"
            class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition-colors font-medium"
          >
            Refer Friends
          </a>
        </div>
      </div>

      <!-- Health Education -->
      <div class="usrad-card p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Health Education
        </h3>
        <div class="space-y-3">
          <div class="p-3 bg-blue-50 rounded-lg">
            <h4 class="font-medium text-blue-900">Preparing for Your MRI</h4>
            <p class="text-sm text-blue-700 mt-1">
              Essential tips for a successful scan
            </p>
            <a
              href="/patient-dashboard/education"
              class="text-blue-600 text-sm font-medium">Read More â†’</a
            >
          </div>
          <div class="p-3 bg-green-50 rounded-lg">
            <h4 class="font-medium text-green-900">
              Understanding Your Results
            </h4>
            <p class="text-sm text-green-700 mt-1">
              How to read your imaging reports
            </p>
            <a
              href="/patient-dashboard/education"
              class="text-green-600 text-sm font-medium">Read More â†’</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</PatientDashboardLayout>
