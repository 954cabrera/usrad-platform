<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Join USRad Network | Provider Registration</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Manrope", sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #f5f9ff 0%, #ffffff 100%);
        min-height: 100vh;
      }

      .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      .header {
        text-align: center;
        margin-bottom: 40px;
      }

      .header h1 {
        color: #003087;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 16px;
      }

      .header p {
        color: #6b7280;
        font-size: 1.125rem;
        max-width: 600px;
        margin: 0 auto;
      }

      .form-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }

      .form-header {
        background: linear-gradient(135deg, #003087 0%, #001a4d 100%);
        color: white;
        padding: 30px;
        text-align: center;
      }

      .form-header h2 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
      }

      .form-content {
        padding: 40px;
      }

      .section {
        margin-bottom: 40px;
        padding: 30px;
        border-radius: 12px;
        border-left: 4px solid #cc9933;
      }

      .section-business {
        background: #f8f2e1;
      }
      .section-contact {
        background: #f0f4f9;
      }
      .section-services {
        background: #f8f2e1;
      }
      .section-operations {
        background: #f0f4f9;
      }
      .section-banking {
        background: #f8f2e1;
      }

      .section h3 {
        color: #003087;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0 0 20px 0;
        display: flex;
        align-items: center;
      }

      .section-icon {
        width: 24px;
        height: 24px;
        margin-right: 12px;
        background: #cc9933;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 14px;
      }

      .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .grid-2 {
        grid-template-columns: 1fr 1fr;
      }

      .grid-3 {
        grid-template-columns: 1fr 1fr 1fr;
      }

      @media (max-width: 768px) {
        .grid-2,
        .grid-3 {
          grid-template-columns: 1fr;
        }
      }

      .form-group {
        display: flex;
        flex-direction: column;
      }

      .form-group.full-width {
        grid-column: 1 / -1;
      }

      label {
        color: #374151;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.875rem;
      }

      .required {
        color: #dc2626;
      }

      input,
      select,
      textarea {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.2s ease;
        background: #fafafa;
      }

      input:focus,
      select:focus,
      textarea:focus {
        outline: none;
        border-color: #003087;
        background: white;
        box-shadow: 0 0 0 3px rgba(0, 48, 135, 0.1);
      }

      .checkbox-group {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 12px;
        margin-top: 8px;
      }

      .checkbox-item {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .checkbox-item input[type="checkbox"] {
        width: auto;
        margin: 0;
      }

      .terms-section {
        background: #f9fafb;
        padding: 24px;
        border-radius: 12px;
        border: 2px solid #e5e7eb;
      }

      .terms-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 16px;
      }

      .terms-item:last-child {
        margin-bottom: 0;
      }

      .terms-item input[type="checkbox"] {
        margin-top: 4px;
        width: auto;
      }

      .submit-section {
        text-align: center;
        margin-top: 40px;
      }

      .submit-btn {
        background: linear-gradient(135deg, #003087 0%, #002266 100%);
        color: white;
        border: none;
        padding: 16px 48px;
        font-size: 1.125rem;
        font-weight: 600;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      }

      .submit-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
      }

      .next-step {
        color: #6b7280;
        font-size: 0.875rem;
        margin-top: 12px;
      }

      .loading {
        display: none;
        align-items: center;
        justify-content: center;
        gap: 8px;
      }

      .spinner {
        width: 20px;
        height: 20px;
        border: 2px solid #ffffff30;
        border-top: 2px solid #ffffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .result {
        margin-top: 20px;
        padding: 16px;
        border-radius: 8px;
        display: none;
      }

      .result.success {
        background: #d1fae5;
        color: #065f46;
        border: 1px solid #a7f3d0;
      }

      .result.error {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Join the USRad Network</h1>
        <p>
          Complete your application to become a preferred imaging provider and
          start receiving patients immediately.
        </p>
      </div>

      <div class="form-container">
        <div class="form-header">
          <h2>Provider Registration Application</h2>
        </div>

        <div class="form-content">
          <form id="provider-signup-form">
            <!-- Business Information -->
            <div class="section section-business">
              <h3>
                <span class="section-icon">1</span>
                Business Information
              </h3>
              <div class="grid grid-2">
                <div class="form-group full-width">
                  <label
                    >Legal Business Name <span class="required">*</span></label
                  >
                  <input type="text" name="legalBusinessName" required />
                </div>

                <div class="form-group">
                  <label>DBA Name (if different)</label>
                  <input type="text" name="dbaName" />
                </div>

                <div class="form-group">
                  <label>Tax ID / EIN <span class="required">*</span></label>
                  <input
                    type="text"
                    name="taxId"
                    required
                    placeholder="XX-XXXXXXX"
                  />
                </div>

                <div class="form-group full-width">
                  <label>Business Address <span class="required">*</span></label
                  >
                  <input type="text" name="businessAddress" required />
                </div>

                <div class="form-group">
                  <label>City <span class="required">*</span></label>
                  <input type="text" name="city" required />
                </div>

                <div class="form-group">
                  <label>State <span class="required">*</span></label>
                  <select name="state" required id="state-select">
                    <option value="">Select State</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>ZIP Code <span class="required">*</span></label>
                  <input type="text" name="zipCode" required />
                </div>

                <div class="form-group">
                  <label>Business Phone <span class="required">*</span></label>
                  <input type="tel" name="businessPhone" required />
                </div>
              </div>
            </div>

            <!-- Primary Contact -->
            <div class="section section-contact">
              <h3>
                <span class="section-icon">2</span>
                Primary Contact
              </h3>
              <div class="grid grid-2">
                <div class="form-group">
                  <label>First Name <span class="required">*</span></label>
                  <input type="text" name="firstName" required />
                </div>

                <div class="form-group">
                  <label>Last Name <span class="required">*</span></label>
                  <input type="text" name="lastName" required />
                </div>

                <div class="form-group">
                  <label>Title <span class="required">*</span></label>
                  <input
                    type="text"
                    name="title"
                    required
                    placeholder="Owner, Administrator, etc."
                  />
                </div>

                <div class="form-group">
                  <label>Email <span class="required">*</span></label>
                  <input type="email" name="email" required />
                </div>

                <div class="form-group">
                  <label>Direct Phone <span class="required">*</span></label>
                  <input type="tel" name="directPhone" required />
                </div>
              </div>
            </div>

            <!-- Services & Equipment -->
            <div class="section section-services">
              <h3>
                <span class="section-icon">3</span>
                Services & Equipment
              </h3>

              <div class="form-group">
                <label
                  >Imaging Services Offered <span class="required">*</span
                  ></label
                >
                <div class="checkbox-group">
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="MRI"
                      id="service-mri"
                    />
                    <label for="service-mri">MRI</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="CT"
                      id="service-ct"
                    />
                    <label for="service-ct">CT Scan</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="Ultrasound"
                      id="service-us"
                    />
                    <label for="service-us">Ultrasound</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="X-Ray"
                      id="service-xr"
                    />
                    <label for="service-xr">X-Ray</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="Mammography"
                      id="service-mammo"
                    />
                    <label for="service-mammo">Mammography</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      name="services"
                      value="DEXA"
                      id="service-dexa"
                    />
                    <label for="service-dexa">DEXA</label>
                  </div>
                </div>
              </div>

              <div class="grid grid-2">
                <div class="form-group" id="mri-details" style="display: none;">
                  <label>MRI Field Strength</label>
                  <select name="mriFieldStrength">
                    <option value="">Select Field Strength</option>
                    <option value="1.5T">1.5 Tesla</option>
                    <option value="3T">3 Tesla</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div class="form-group full-width">
                  <label>Additional Equipment Details</label>
                  <textarea
                    name="equipmentDetails"
                    rows="3"
                    placeholder="Manufacturer, model, year, special capabilities..."
                  ></textarea>
                </div>
              </div>
            </div>

            <!-- Operating Information -->
            <div class="section section-operations">
              <h3>
                <span class="section-icon">4</span>
                Operating Information
              </h3>
              <div class="grid grid-2">
                <div class="form-group">
                  <label>Years in Operation</label>
                  <select name="yearsInOperation">
                    <option value="">Select</option>
                    <option value="Less than 1">Less than 1 year</option>
                    <option value="1-3">1-3 years</option>
                    <option value="4-10">4-10 years</option>
                    <option value="10+">10+ years</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Average Daily Volume</label>
                  <select name="dailyVolume">
                    <option value="">Select</option>
                    <option value="1-10">1-10 patients</option>
                    <option value="11-25">11-25 patients</option>
                    <option value="26-50">26-50 patients</option>
                    <option value="50+">50+ patients</option>
                  </select>
                </div>

                <div class="form-group full-width">
                  <label>Current Hours of Operation</label>
                  <textarea
                    name="hoursOfOperation"
                    rows="2"
                    placeholder="e.g., Mon-Fri 7AM-7PM, Sat 8AM-2PM"></textarea>
                </div>
              </div>
            </div>

            <!-- Payment Setup (Simplified) -->
            <div class="section section-banking">
              <h3>
                <span class="section-icon">5</span>
                Payment Setup
              </h3>
              <div class="grid grid-2">
                <div class="form-group">
                  <label>Preferred Payment Method</label>
                  <select name="paymentMethod">
                    <option value="ACH">ACH Direct Deposit (Recommended)</option
                    >
                    <option value="Check">Paper Check</option>
                    <option value="Wire">Wire Transfer</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Primary Bank Name</label>
                  <input
                    type="text"
                    name="bankName"
                    placeholder="We'll collect details after PSA signing"
                  />
                </div>
              </div>

              <div
                class="payment-note"
                style="background: #eff6ff; padding: 16px; border-radius: 8px; border-left: 4px solid #3b82f6; margin-top: 16px;"
              >
                <p style="margin: 0; color: #1e40af; font-size: 0.875rem;">
                  <strong>💡 Payment Details:</strong> Complete banking information
                  will be collected securely after your Provider Service Agreement
                  is signed and credentialing is approved.
                </p>
              </div>
            </div>

            <!-- Terms -->
            <div class="terms-section">
              <div class="terms-item">
                <input
                  type="checkbox"
                  name="agreementTerms"
                  required
                  id="terms1"
                />
                <label for="terms1">
                  I acknowledge that I am authorized to enter into this
                  agreement on behalf of the imaging center and that all
                  information provided is accurate and complete. <span
                    class="required">*</span
                  >
                </label>
              </div>

              <div class="terms-item">
                <input
                  type="checkbox"
                  name="contactConsent"
                  required
                  id="terms2"
                />
                <label for="terms2">
                  I consent to being contacted by USRad regarding this
                  application and ongoing network participation. <span
                    class="required">*</span
                  >
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="submit-section">
              <button type="submit" class="submit-btn">
                <span class="btn-text"
                  >Complete Registration & Access Dashboard</span
                >
                <div class="loading">
                  <div class="spinner"></div>
                  <span>Creating Account...</span>
                </div>
              </button>
              <p class="next-step">
                Next: Review and sign your Provider Service Agreement
              </p>
            </div>
          </form>

          <div id="result" class="result"></div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Populate states dropdown
        const states = [
          { code: "AL", name: "Alabama" },
          { code: "AK", name: "Alaska" },
          { code: "AZ", name: "Arizona" },
          { code: "AR", name: "Arkansas" },
          { code: "CA", name: "California" },
          { code: "CO", name: "Colorado" },
          { code: "CT", name: "Connecticut" },
          { code: "DE", name: "Delaware" },
          { code: "FL", name: "Florida" },
          { code: "GA", name: "Georgia" },
          { code: "HI", name: "Hawaii" },
          { code: "ID", name: "Idaho" },
          { code: "IL", name: "Illinois" },
          { code: "IN", name: "Indiana" },
          { code: "IA", name: "Iowa" },
          { code: "KS", name: "Kansas" },
          { code: "KY", name: "Kentucky" },
          { code: "LA", name: "Louisiana" },
          { code: "ME", name: "Maine" },
          { code: "MD", name: "Maryland" },
          { code: "MA", name: "Massachusetts" },
          { code: "MI", name: "Michigan" },
          { code: "MN", name: "Minnesota" },
          { code: "MS", name: "Mississippi" },
          { code: "MO", name: "Missouri" },
          { code: "MT", name: "Montana" },
          { code: "NE", name: "Nebraska" },
          { code: "NV", name: "Nevada" },
          { code: "NH", name: "New Hampshire" },
          { code: "NJ", name: "New Jersey" },
          { code: "NM", name: "New Mexico" },
          { code: "NY", name: "New York" },
          { code: "NC", name: "North Carolina" },
          { code: "ND", name: "North Dakota" },
          { code: "OH", name: "Ohio" },
          { code: "OK", name: "Oklahoma" },
          { code: "OR", name: "Oregon" },
          { code: "PA", name: "Pennsylvania" },
          { code: "RI", name: "Rhode Island" },
          { code: "SC", name: "South Carolina" },
          { code: "SD", name: "South Dakota" },
          { code: "TN", name: "Tennessee" },
          { code: "TX", name: "Texas" },
          { code: "UT", name: "Utah" },
          { code: "VT", name: "Vermont" },
          { code: "VA", name: "Virginia" },
          { code: "WA", name: "Washington" },
          { code: "WV", name: "West Virginia" },
          { code: "WI", name: "Wisconsin" },
          { code: "WY", name: "Wyoming" },
        ];

        const stateSelect = document.getElementById("state-select");
        states.forEach((state) => {
          const option = document.createElement("option");
          option.value = state.code;
          option.textContent = state.name;
          stateSelect.appendChild(option);
        });

        const form = document.getElementById("provider-signup-form");
        const submitBtn = form.querySelector(".submit-btn");
        const btnText = submitBtn.querySelector(".btn-text");
        const loading = submitBtn.querySelector(".loading");
        const resultDiv = document.getElementById("result");
        const mriCheckbox = document.getElementById("service-mri");
        const mriDetails = document.getElementById("mri-details");

        // Show MRI details when MRI is selected
        mriCheckbox?.addEventListener("change", (e) => {
          if (e.target.checked) {
            mriDetails.style.display = "block";
          } else {
            mriDetails.style.display = "none";
          }
        });

        // Handle form submission
        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          // Show loading state
          btnText.style.display = "none";
          loading.style.display = "flex";
          submitBtn.disabled = true;
          resultDiv.style.display = "none";

          const formData = new FormData(e.target);
          const data = Object.fromEntries(formData.entries());

          // Collect services array
          const services = Array.from(
            document.querySelectorAll('input[name="services"]:checked')
          ).map((cb) => cb.value);
          data.services = services;

          // Validate required services
          if (services.length === 0) {
            showResult("error", "Please select at least one imaging service.");
            resetButton();
            return;
          }

          try {
            const response = await fetch("/api/provider/signup", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
            });

            const result = await response.json();
            if (response.ok) {
              showResult(
                "success",
                `
        <h3>📧 Application Submitted Successfully!</h3>
        <p><strong>${result.message}</strong></p>
        <p>We've sent a verification link to <strong>${result.email}</strong></p>
        <p>Click the link in your email to access your provider dashboard.</p>
        <p><em>Check your spam folder if you don't see it within a few minutes.</em></p>
        `
              );
              // Don't redirect - wait for email verification
            } else {
              // Use 'result' instead of parsing JSON again!
              console.log("🔍 Full error response:", result);

              // Enhanced error display for duplicate emails and other issues
              if (result.message && result.suggestions) {
                // This is our enhanced error response
                let suggestionsList = result.suggestions
                  .map((s) => `<li style="margin: 8px 0;">${s}</li>`)
                  .join("");
                showResult(
                  "error",
                  `
            <h3>❌ ${result.error}</h3>
            <p style="margin: 12px 0;">${result.message}</p>
            <ul style="text-align: left; margin: 16px 0; padding-left: 20px;">
                ${suggestionsList}
            </ul>
            ${result.loginUrl ? `<p style="margin-top: 16px; text-align: center;"><a href="${result.loginUrl}" style="color: #003087; font-weight: bold; text-decoration: none; background: #f0f4f9; padding: 12px 24px; border-radius: 8px; display: inline-block;">👉 Sign In to Existing Account</a></p>` : ""}
            `
                );
              } else if (result.message) {
                // Simple error with message
                showResult(
                  "error",
                  `
            <h3>❌ ${result.error || "Registration Failed"}</h3>
            <p>${result.message}</p>
            `
                );
              } else {
                // Fallback for old-style errors
                showResult(
                  "error",
                  `Registration failed: ${result.error || "Please try again"}`
                );
              }
              resetButton();
            }
          } catch (error) {
            console.log("🌐 Network error:", error);
            showResult(
              "error",
              `
        <h3>❌ Connection Error</h3>
        <p>Unable to connect to our servers. Please check your internet connection and try again.</p>
        <p><em>Error details: ${error.message}</em></p>
    `
            );
            resetButton();
          }
        });

        function showResult(type, message) {
          resultDiv.className = `result ${type}`;
          resultDiv.innerHTML = message;
          resultDiv.style.display = "block";
          resultDiv.scrollIntoView({ behavior: "smooth" });
        }

        function resetButton() {
          btnText.style.display = "inline";
          loading.style.display = "none";
          submitBtn.disabled = false;
        }
      });
    </script>
  </body>
</html>
